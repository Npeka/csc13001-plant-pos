<Page
    x:Class="csc13001_plant_pos.Views.DiscountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        x:Name="ContentArea"
        Padding="20"
        Background="White">
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
            <StackPanel Spacing="12">
                <!--  Active Discount Campaign  -->
                <Grid
                    Padding="16"
                    Background="White"
                    BorderBrush="#E5E5E5"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Campaign Header  -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Spacing="12">
                            <FontIcon
                                FontSize="20"
                                Foreground="#4CAF50"
                                Glyph="&#xE8EC;" />
                            <StackPanel>
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Text="Summer Sale 2024" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#666666"
                                    Text="Active until June 30, 2024" />
                                <HyperlinkButton
                                    Padding="0"
                                    Content="Edit Campaign"
                                    Foreground="#666666" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="25% OFF" />
                            <TextBlock
                                FontSize="12"
                                Foreground="#666666"
                                Text="All Indoor Plants" />
                            <TextBlock
                                FontSize="12"
                                Foreground="#4CAF50"
                                Text="Active" />
                        </StackPanel>
                    </Grid>

                    <!--  Discounted Items  -->
                    <StackPanel
                        Grid.Row="1"
                        Margin="32,16,0,0"
                        Spacing="16">
                        <!--  Monstera Deliciosa  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Image
                                Width="40"
                                Height="40"
                                Source="ms-appx:///Assets/sample.png" />
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock FontWeight="SemiBold" Text="Monstera Deliciosa" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#666666"
                                    Text="Indoor Plant - Large" />
                            </StackPanel>
                            <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Foreground="#666666"
                                    Text="$74.99" />
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Foreground="#4CAF50"
                                    Text="$56.24" />
                            </StackPanel>
                        </Grid>

                        <!--  Snake Plant  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Image
                                Width="40"
                                Height="40"
                                Source="ms-appx:///Assets/sample.png" />
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock FontWeight="SemiBold" Text="Snake Plant" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#666666"
                                    Text="Indoor Plant - Medium" />
                            </StackPanel>
                            <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Foreground="#666666"
                                    Text="$45.99" />
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Foreground="#4CAF50"
                                    Text="$34.49" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>

                <!--  Upcoming Discount Campaign  -->
                <Grid
                    Padding="16"
                    Background="White"
                    BorderBrush="#E5E5E5"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="0"
                        Orientation="Horizontal"
                        Spacing="12">
                        <FontIcon
                            FontSize="20"
                            Foreground="#FFA000"
                            Glyph="&#xE8EC;" />
                        <StackPanel>
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Spring Collection 2024" />
                            <TextBlock
                                FontSize="12"
                                Foreground="#666666"
                                Text="Starts from April 1, 2024" />
                            <HyperlinkButton
                                Padding="0"
                                Content="Edit Campaign"
                                Foreground="#666666" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="30% OFF" />
                        <TextBlock
                            FontSize="12"
                            Foreground="#666666"
                            Text="New Arrivals" />
                        <TextBlock
                            FontSize="12"
                            Foreground="#FFA000"
                            Text="Upcoming" />
                    </StackPanel>
                </Grid>

                <!--  Expired Campaign  -->
                <Grid
                    Padding="16"
                    Background="White"
                    BorderBrush="#E5E5E5"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="0"
                        Orientation="Horizontal"
                        Spacing="12">
                        <FontIcon
                            FontSize="20"
                            Foreground="red"
                            Glyph="&#xE8EC;" />
                        <StackPanel>
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Winter Sale 2023" />
                            <TextBlock
                                FontSize="12"
                                Foreground="#666666"
                                Text="Ended on Dec 31, 2023" />
                            <HyperlinkButton
                                Padding="0"
                                Content="View Details"
                                Foreground="#666666" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="20% OFF" />
                        <TextBlock
                            FontSize="12"
                            Foreground="#666666"
                            Text="Seasonal Plants" />
                        <TextBlock
                            FontSize="12"
                            Foreground="#666666"
                            Text="Expired" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>