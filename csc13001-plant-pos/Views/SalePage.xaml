<Page
    x:Class="csc13001_plant_pos.Views.SalePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:csc13001_plant_pos.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Never"
    mc:Ignorable="d">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>


        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
            <!--  Khu vực sản phẩm  -->
            <StackPanel Grid.Column="0" Margin="0,0,0,40">
                <controls:WrapPanel HorizontalAlignment="Left" Orientation="Horizontal">
                    <Button
                        Margin="0,0,10,10"
                        Padding="15,8"
                        Background="#EBEBEB"
                        CornerRadius="14"
                        FontWeight="Bold"
                        Foreground="#0ABB6A">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon
                                Margin="0,0,8,0"
                                FontSize="10"
                                Glyph="&#xE7BC;" />
                            <!--  Plant icon  -->
                            <TextBlock FontSize="10" Text="Plants" />
                        </StackPanel>
                    </Button>

                    <Button
                        Margin="0,0,10,10"
                        Padding="15,8"
                        Background="#EBEBEB"
                        CornerRadius="14"
                        FontWeight="Bold"
                        Foreground="#0ABB6A">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon
                                Margin="0,0,8,0"
                                FontSize="10"
                                Glyph="&#xE8F1;" />
                            <!--  Pot icon  -->
                            <TextBlock FontSize="10" Text="Pots" />
                        </StackPanel>
                    </Button>

                    <Button
                        Margin="0,0,10,10"
                        Padding="15,8"
                        Background="#EBEBEB"
                        CornerRadius="14"
                        FontWeight="Bold"
                        Foreground="#0ABB6A">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon
                                Margin="0,0,8,0"
                                FontSize="10"
                                Glyph="&#xE710;" />
                            <!--  Watering icon  -->
                            <TextBlock FontSize="10" Text="Fertilizers &amp; Nutrients" />
                        </StackPanel>
                    </Button>

                    <Button
                        Margin="0,0,10,10"
                        Padding="15,8"
                        Background="#EBEBEB"
                        CornerRadius="14"
                        FontWeight="Bold"
                        Foreground="#0ABB6A">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon
                                Margin="0,0,8,0"
                                FontSize="10"
                                Glyph="&#xE71D;" />
                            <!--  Scissors icon  -->
                            <TextBlock FontSize="10" Text="Gardening Tools" />
                        </StackPanel>
                    </Button>

                    <Button
                        Margin="0,0,10,10"
                        Padding="15,8"
                        Background="#EBEBEB"
                        CornerRadius="14"
                        FontWeight="Bold"
                        Foreground="#0ABB6A">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon
                                Margin="0,0,8,0"
                                FontSize="10"
                                Glyph="&#xE72D;" />
                            <!--  Gift icon  -->
                            <TextBlock FontSize="10" Text="Decor &amp; Accessories" />
                        </StackPanel>
                    </Button>

                    <Button
                        Margin="0,0,10,10"
                        Padding="15,8"
                        Background="#EBEBEB"
                        CornerRadius="14"
                        FontWeight="Bold"
                        Foreground="#0ABB6A">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon
                                Margin="0,0,8,0"
                                FontSize="10"
                                Glyph="&#xE72D;" />
                            <!--  Gift icon  -->
                            <TextBlock FontSize="10" Text="Decor &amp; Accessories" />
                        </StackPanel>
                    </Button>
                </controls:WrapPanel>

                <!--  Danh sách sản phẩm với dữ liệu cứng  -->
                <controls:WrapPanel
                    Padding="0,0,0,250"
                    HorizontalAlignment="Center"
                    HorizontalSpacing="25"
                    Orientation="Horizontal"
                    VerticalSpacing="270">
                    <Canvas Width="180">
                        <Border
                            Canvas.Top="50"
                            Width="180"
                            Padding="10,100,10,20"
                            Background="White"
                            Canvas.ZIndex="0"
                            CornerRadius="20">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock
                                    Padding="0,10"
                                    HorizontalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="American Favorite" />

                                <TextBlock
                                    Padding="0,0,0,10"
                                    HorizontalAlignment="Center"
                                    FontWeight="Bold"
                                    Foreground="Green"
                                    Text="$4.87" />

                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="12"
                                    TextAlignment="Center">
                                    <Run
                                        FontWeight="Bold"
                                        Foreground="Black"
                                        Text="18 Pan" />
                                    <Run Foreground="Gray" Text=" Available" />
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <Image
                            Canvas.Left="15"
                            Width="150"
                            Height="150"
                            Canvas.ZIndex="1"
                            Source="D:\Users\Admin\source\repos\csc13001-plant-pos\csc13001-plant-pos\Assets\sample.png" />
                    </Canvas>
                    <Canvas Width="180">
                        <Border
                            Canvas.Top="50"
                            Width="180"
                            Padding="10,100,10,20"
                            Background="White"
                            Canvas.ZIndex="0"
                            CornerRadius="20">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock
                                    Padding="0,10"
                                    HorizontalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="American Favorite" />

                                <TextBlock
                                    Padding="0,0,0,10"
                                    HorizontalAlignment="Center"
                                    FontWeight="Bold"
                                    Foreground="Green"
                                    Text="$4.87" />

                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="12"
                                    TextAlignment="Center">
                                    <Run
                                        FontWeight="Bold"
                                        Foreground="Black"
                                        Text="18 Pan" />
                                    <Run Foreground="Gray" Text=" Available" />
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <Image
                            Canvas.Left="15"
                            Width="150"
                            Height="150"
                            Canvas.ZIndex="1"
                            Source="D:\Users\Admin\source\repos\csc13001-plant-pos\csc13001-plant-pos\Assets\sample.png" />
                    </Canvas>
                </controls:WrapPanel>
            </StackPanel>
        </ScrollViewer>

        <!--  Khu vực hóa đơn với dữ liệu cứng  -->
        <StackPanel
            Grid.Column="1"
            Margin="0,0,0,20"
            Padding="10"
            Background="White"
            CornerRadius="25">
            <TextBlock
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="#0ABB6A"
                Text="Current order" />
            <StackPanel>
                <Border
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    Background="White">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Spacing="10">
                            <Image
                                Width="50"
                                Height="50"
                                Source="D:\Users\Admin\source\repos\csc13001-plant-pos\csc13001-plant-pos\Assets\sample.png" />
                            <StackPanel>
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Text="Orange Juice" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="Note: Less Ice" />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="$2.87" />
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <Button
                                        Width="30"
                                        Height="30"
                                        Content="-"
                                        FontSize="14" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Text="4" />
                                    <Button
                                        Width="30"
                                        Height="30"
                                        Content="+"
                                        FontSize="14" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <Button
                            Grid.Column="1"
                            Width="30"
                            Height="30"
                            VerticalAlignment="Bottom">
                            <FontIcon Glyph="&#xE104;" />
                        </Button>
                    </Grid>
                </Border>
                <Border
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    Background="White">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Spacing="10">
                            <Image
                                Width="50"
                                Height="50"
                                Source="D:\Users\Admin\source\repos\csc13001-plant-pos\csc13001-plant-pos\Assets\sample.png" />
                            <StackPanel>
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Text="Orange Juice" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="Note: Less Ice" />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="$2.87" />
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <Button
                                        Width="30"
                                        Height="30"
                                        Content="-"
                                        FontSize="14" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Text="4" />
                                    <Button
                                        Width="30"
                                        Height="30"
                                        Content="+"
                                        FontSize="14" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <Button
                            Grid.Column="1"
                            Width="30"
                            Height="30"
                            VerticalAlignment="Bottom">
                            <FontIcon Glyph="&#xE104;" />
                        </Button>
                    </Grid>
                </Border>

            </StackPanel>


            <StackPanel Spacing="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        FontSize="16"
                        Foreground="Gray"
                        Text="Items (7)" />
                    <TextBlock
                        Grid.Column="1"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="$28.67" />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        FontSize="16"
                        Foreground="Gray"
                        Text="Tax (10%)" />
                    <TextBlock
                        Grid.Column="1"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="$2.86" />
                </Grid>

                <Border
                    Margin="0,10,0,10"
                    BorderBrush="LightGray"
                    BorderThickness="1" />

                <Grid Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Total" />
                    <TextBlock
                        Grid.Column="1"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="$31.53" />
                </Grid>
            </StackPanel>

            <!--  Nút Print Bills  -->
            <Button
                Padding="10"
                HorizontalAlignment="Stretch"
                Background="#0ABB6A"
                Content="Print Bills"
                CornerRadius="16"
                FontSize="14"
                FontWeight="Bold"
                Foreground="White" />
        </StackPanel>

    </Grid>
</Page>
