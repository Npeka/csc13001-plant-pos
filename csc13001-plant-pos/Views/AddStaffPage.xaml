<Page
    x:Class="csc13001_plant_pos.Views.AddStaffPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:csc13001_plant_pos.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Never"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="DatePicker">
            <Setter Property="MinHeight" Value="50" />
        </Style>
    </Page.Resources>
    <Grid x:Name="ContentArea">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <!--  Sidebar  -->
                    <ColumnDefinition Width="20" />
                    <!--  Khoảng cách giữa hai bên  -->
                    <ColumnDefinition Width="*" />
                    <!--  Nội dung bên phải  -->
                </Grid.ColumnDefinitions>

                <!--  Left Side Menu (Bo góc 25)  -->
                <Border
                    Grid.Column="0"
                    Padding="20"
                    Background="White"
                    CornerRadius="25">
                    <StackPanel Width="250">
                        <Grid
                            Width="120"
                            Height="120"
                            Margin="0,20,0,10">
                            <Border
                                Width="120"
                                Height="120"
                                CornerRadius="60">
                                <Border.Background>
                                    <ImageBrush ImageSource="ms-appx:///Assets/Sample1.jpg" />
                                </Border.Background>
                            </Border>

                            <!--  Status Icon Container  -->
                            <Border
                                Width="28"
                                Height="28"
                                Margin="-8,-8,8,3"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Background="#0ABB6A"
                                BorderThickness="2"
                                CornerRadius="16">
                                <FontIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="14"
                                    Foreground="White"
                                    Glyph="&#xE89E;" />
                            </Border>
                        </Grid>
                        <TextBlock
                            Margin="0,10"
                            HorizontalAlignment="Center"
                            FontSize="24"
                            Text="Roland Donald" />

                        <TextBlock
                            Margin="0,0,0,20"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            Foreground="#666666"
                            Text="Cashier" />

                        <!--  Menu Items  -->
                        <ListBox Background="Transparent" BorderThickness="0">
                            <ListBoxItem Padding="15">
                                <StackPanel Orientation="Horizontal">
                                    <Path
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,10,0"
                                        Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                                        Fill="#0ABB6A" />
                                    <TextBlock Foreground="#0ABB6A" Text="Personal Information" />
                                </StackPanel>
                            </ListBoxItem>

                            <ListBoxItem Padding="15">
                                <StackPanel Orientation="Horizontal">
                                    <Path
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,10,0"
                                        Data="M12,17A2,2 0 0,0 14,15C14,13.89 13.1,13 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10C4,8.89 4.9,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z"
                                        Fill="#666666" />
                                    <TextBlock Foreground="#666666" Text="Login &amp; Password" />
                                </StackPanel>
                            </ListBoxItem>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!--  Right Side Content (Bo góc 25)  -->
                <Border
                    Grid.Column="2"
                    Padding="20"
                    Background="White"
                    CornerRadius="25">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,30"
                            FontSize="24"
                            FontWeight="SemiBold"
                            Text="Personal Information" />

                        <!--  Gender Selection  -->
                        <StackPanel Margin="0,0,0,20" Orientation="Horizontal">
                            <RadioButton Content="Male" IsChecked="True" />
                            <RadioButton Content="Female" />
                        </StackPanel>

                        <!--  Name Fields  -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Margin="0,0,0,5" Text="First Name" />
                                <TextBox
                                    Padding="10"
                                    Background="#F5F5F5"
                                    BorderThickness="0"
                                    Text="Roland" />
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Margin="0,0,0,5" Text="Last Name" />
                                <TextBox
                                    Padding="10"
                                    Background="#F5F5F5"
                                    BorderThickness="0"
                                    Text="Donald" />
                            </StackPanel>
                        </Grid>

                        <!--  Email  -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Margin="0,0,0,5" Text="Email" />
                            <TextBox
                                Padding="10"
                                Background="#F5F5F5"
                                BorderThickness="0"
                                Text="rolandDonald@mail.com" />
                        </StackPanel>

                        <!--  Address  -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Margin="0,0,0,5" Text="Address" />
                            <TextBox
                                Padding="10"
                                Background="#F5F5F5"
                                BorderThickness="0"
                                Text="3605 Parker Rd." />
                        </StackPanel>

                        <!--  Phone and DOB  -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Margin="0,0,0,5" Text="Phone Number" />
                                <TextBox
                                    Padding="10"
                                    Background="#F5F5F5"
                                    BorderThickness="0"
                                    Text="(405) 555-0128" />
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Margin="0,0,0,5" Text="Date of Birth" />
                                <TextBox
                                    Padding="10"
                                    Background="#F5F5F5"
                                    BorderThickness="0"
                                    PlaceholderText="dd/mm/yyyy" />
                            </StackPanel>

                        </Grid>

                        <!--  Buttons  -->
                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button
                                Grid.Column="0"
                                Padding="20,10"
                                HorizontalAlignment="Stretch"
                                Background="Transparent"
                                BorderBrush="#0ABB6A"
                                Content="Discard Changes"
                                CornerRadius="10"
                                FontWeight="SemiBold"
                                Foreground="#0ABB6A" />

                            <Button
                                Grid.Column="2"
                                Padding="20,10"
                                HorizontalAlignment="Stretch"
                                Background="#0ABB6A"
                                BorderThickness="0"
                                Content="Save Changes"
                                CornerRadius="10"
                                FontWeight="SemiBold"
                                Foreground="White" />
                        </Grid>

                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
