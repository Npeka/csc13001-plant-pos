<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="csc13001_plant_pos.Views.ListEmployees"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:csc13001_plant_pos.Views"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20" Width="900" Height="450">

        <StackPanel>

            <!-- Thanh tìm kiếm -->
            <TextBox x:Name="SearchBox" PlaceholderText="Tìm kiếm theo tên hoặc ID nhân viên..." 
                     Margin="0,0,0,10" TextChanged="SearchBox_TextChanged"/>

            <!-- Bộ lọc -->
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Bộ lọc ngày -->
                <CalendarDatePicker x:Name="DateFilter"
                                    PlaceholderText="Ngày bắt đầu làm việc"
                                    DateChanged="DateFilter_DateChanged"
                                    Width="200"
                                    VerticalAlignment="Center"
                                    Grid.Column="0"/>

                <!-- Bộ lọc vị trí -->
                <ComboBox x:Name="PositionFilter" Width="200" PlaceholderText="Chọn vị trí"
                          SelectionChanged="PositionFilter_SelectionChanged"
                          VerticalAlignment="Center"
                          Grid.Column="1" Margin="10,0,0,0">
                    <ComboBoxItem Content="Tất cả"/>
                    <ComboBoxItem Content="Quản lý"/>
                    <ComboBoxItem Content="Nhân viên bán hàng"/>
                    <ComboBoxItem Content="Nhân viên kho"/>
                    <ComboBoxItem Content="Kế toán"/>
                </ComboBox>

                <!-- Nút Reset -->
                <Button Content="Đặt lại" Click="ResetFilter_Click" Width="100" Background="Red" Foreground="White"
                        VerticalAlignment="Center"
                        Grid.Column="2" Margin="10,0,0,0"/>
            </Grid>

            <!-- Bọc DataGrid trong ScrollViewer để kích hoạt cuộn -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Height="350">
                <controls:DataGrid x:Name="EmployeesGrid" ItemsSource="{Binding FilteredEmployees}" 
                   AutoGenerateColumns="False" HeadersVisibility="Column" Margin="0,10,0,0" MinWidth="900">

                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn Header="ID Nhân viên" Binding="{Binding ID}" Width="100"/>
                        <controls:DataGridTextColumn Header="Họ Tên" Binding="{Binding Name}" Width="*"/>
                        <controls:DataGridTextColumn Header="Số điện thoại" Binding="{Binding PhoneNumber}" Width="150"/>
                        <controls:DataGridTextColumn Header="Ngày bắt đầu" Binding="{Binding StartDate}" Width="200"/>
                        <controls:DataGridTextColumn Header="Vị trí" Binding="{Binding Position}" Width="200"/>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>
            </ScrollViewer>

        </StackPanel>
    </Grid>
</Page>
