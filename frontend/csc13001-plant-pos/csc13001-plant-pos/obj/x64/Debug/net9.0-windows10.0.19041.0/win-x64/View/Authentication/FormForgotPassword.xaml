<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="csc13001_plant_pos.View.Authentication.FormForgotPassword"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View.Authentication"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <local:FormTitle Title="Forgot Your Password?" Margin="0,0,0,16" />

        <TextBlock
            Margin="0,0,0,16"
            HorizontalAlignment="Center"
            FontSize="14"
            Opacity="0.8"
            Text="Enter your username to receive a password reset OTP."
            TextWrapping="Wrap" />

        <!--  Username Input & Send OTP Button  -->
        <Grid Margin="0,0,0,16" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox x:ConnectionId='5'
                x:Name="Username"
                Grid.Column="0"
                Height="40"
                Padding="10"
                BorderBrush="Gray"
                CornerRadius="5"
                PlaceholderText="Enter your username"
                Text="{Binding Username, Mode=TwoWay}" />

            <Button x:ConnectionId='6'
                x:Name="SendOTPButton"
                Grid.Column="1"
                Height="40"
                                           
                IsEnabled="{Binding IsSendOTPEnabled}"
                Style="{StaticResource AccentButtonStyle}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="{Binding SendOTPButtonText}" />
                        <FontIcon FontSize="14" Glyph="&#xE724;" />
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid>

        <TextBlock
            Margin="0,0,0,16"
            FontSize="14"
            Foreground="{Binding ErrorColor}"
            Text="{Binding Error, TargetNullValue=''}"
            TextWrapping="Wrap"
            Visibility="{Binding Error, Converter={StaticResource StringToVisibilityConverter}}" />


        <!--  OTP Input  -->
        <TextBox x:ConnectionId='2'
            x:Name="OTP"
            Height="40"
            Margin="0,0,0,16"
            Padding="10"
            BorderBrush="Gray"
            CornerRadius="5"
            PlaceholderText="Enter OTP"
            Text="{Binding Otp, Mode=TwoWay}" />

        <TextBlock
            Margin="0,0,0,16"
            FontSize="14"
            Foreground="{Binding ErrorColor}"
            Text="{Binding ErrorOtp, TargetNullValue=''}"
            TextWrapping="Wrap"
            Visibility="{Binding ErrorOtp, Converter={StaticResource StringToVisibilityConverter}}" />

        <!--  Verify OTP Button  -->
        <Button x:ConnectionId='3'
            x:Name="VerifyOTPButton"
            Height="40"
            Margin="0,0,0,16"
            HorizontalAlignment="Stretch"
                                         
            Style="{StaticResource AccentButtonStyle}">
            <Button.Content>
                <TextBlock Text="Verify OTP" />
            </Button.Content>
        </Button>

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
            <Hyperlink x:ConnectionId='4'                              >
                Back to Login
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</UserControl>

