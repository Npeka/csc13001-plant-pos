<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="csc13001_plant_pos.View.StatisticPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header with date range and export button  -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Padding="8,5"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Content="Last 7 days">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="12" Glyph="&#xE787;" />
                            <TextBlock VerticalAlignment="Center" Text="Last 7 days" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <Button
                Grid.Column="1"
                Padding="8,5"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Content="Export">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="12" Glyph="&#xE8DE;" />
                            <TextBlock VerticalAlignment="Center" Text="Export" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </Grid>

        <!--  Statistics tiles  -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Revenue Tile  -->
            <Grid
                Grid.Column="0"
                Margin="0,0,10,0"
                Padding="20,15"
                CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="Revenue" />
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="12"
                        Foreground="#FF4D4D"
                        Text="- 10%" />
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Border
                        Width="32"
                        Height="32"
                        Margin="0,0,10,0"
                        Background="#FFE8D7"
                        CornerRadius="16">
                        <FontIcon
                            FontSize="14"
                            Foreground="#FF9C44"
                            Glyph="&#xE8CB;" />
                    </Border>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="$14,329" />
                </StackPanel>
            </Grid>

            <!--  Orders Tile  -->
            <Grid
                Grid.Column="1"
                Margin="5,0,5,0"
                Padding="20,15"
                CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="Orders" />
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="12"
                        Foreground="#4CAF50"
                        Text="+ 20%" />
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Border
                        Width="32"
                        Height="32"
                        Margin="0,0,10,0"
                        Background="#E8F5E9"
                        CornerRadius="16">
                        <FontIcon
                            FontSize="14"
                            Foreground="#4CAF50"
                            Glyph="&#xE8F3;" />
                    </Border>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="2,506" />
                </StackPanel>
            </Grid>

            <!--  Average Tile  -->
            <Grid
                Grid.Column="2"
                Margin="10,0,0,0"
                Padding="20,15"
                CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="Average" />
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="12"
                        Foreground="#FF4D4D"
                        Text="- 10%" />
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Border
                        Width="32"
                        Height="32"
                        Margin="0,0,10,0"
                        Background="#FFF8E1"
                        CornerRadius="16">
                        <FontIcon
                            FontSize="14"
                            Foreground="#FFC107"
                            Glyph="&#xE8D4;" />
                    </Border>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="$2,047" />
                </StackPanel>
            </Grid>
        </Grid>

        <!--  Chart Section  -->
        <Grid
            Grid.Row="2"
            Padding="20"
            CornerRadius="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,15"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Sales chart" />

            <Grid Grid.Row="1">
                <lvc:CartesianChart
                    Series="{Binding Series}"
                    TooltipPosition="Auto"
                    XAxes="{Binding XAxes}"
                    YAxes="{Binding YAxes}" />


                <!--  Tooltip Overlay (positioned by code-behind)  -->
                <Border x:ConnectionId='3'
                    x:Name="ChartTooltip"
                    Padding="8,4"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#333333"
                    CornerRadius="4"
                    Visibility="Collapsed">
                    <TextBlock
                        FontSize="12"
                        Foreground="White"
                        Text="966" />
                </Border>
            </Grid>
        </Grid>

        <!--  Data table  -->
        <Grid
            Grid.Row="3"
            Margin="0,20,0,0"
            Padding="20"
            CornerRadius="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Headers  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,0,15"
                FontWeight="SemiBold"
                Text="Name" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,0,0,15"
                FontWeight="SemiBold"
                Text="Sales" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                Margin="0,0,0,15"
                FontWeight="SemiBold"
                Text="Refunds" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="3"
                Margin="0,0,0,15"
                FontWeight="SemiBold"
                Text="Net" />

            <!--  Data Binding  -->
            <ItemsControl
                Grid.Row="1"
                Grid.ColumnSpan="4"
                ItemsSource="{Binding SalesList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,0,15"
                                Text="{Binding Name}" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="0,0,0,15"
                                Text="{Binding Sales}" />
                            <TextBlock
                                Grid.Column="2"
                                Margin="0,0,0,15"
                                Text="{Binding Refunds}" />
                            <TextBlock
                                Grid.Column="3"
                                Margin="0,0,0,15"
                                Text="{Binding Net}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

    </Grid>
</Page>

