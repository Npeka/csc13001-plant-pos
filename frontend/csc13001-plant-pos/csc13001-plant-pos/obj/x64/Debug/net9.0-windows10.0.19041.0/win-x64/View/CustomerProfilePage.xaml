<?xml version="1.0" encoding="utf-8" ?>
<Page x:ConnectionId='1'
    x:Class="csc13001_plant_pos.View.CustomerProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:csc13001_plant_pos.Model"
    xmlns:orderDto="using:csc13001_plant_pos.DTO.OrderDTO"
    x:Name="Root"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="DatePicker">
            <Setter Property="MinHeight" Value="50" />
        </Style>

        <!--  Order Item Template  -->
        <DataTemplate x:Key="OrderItemTemplate"                                   >
            <Expander x:ConnectionId='3'
                Margin="0,0,0,8"
                Padding="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Background="White"
                BorderBrush="#E5E5E5"
                BorderThickness="1"
                CornerRadius="8"
                IsExpanded="False">
                <Expander.Header>
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Spacing="12">
                            <FontIcon
                                FontSize="20"
                                Foreground="#4CAF50"
                                Glyph="" />
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,4,0"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Mã đơn: " />
                                    <TextBlock x:ConnectionId='7'
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                                                             />
                                </StackPanel>
                                <!--<StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,4,0"
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="Mã nhân viên: " />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="{x:Bind Staff.UserId, Mode=OneWay}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,4,0"
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="Tên nhân viên: " />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="{x:Bind Staff.Fullname, Mode=OneWay}" />
                                </StackPanel>-->
                            </StackPanel>
                        </StackPanel>

                        <Grid Grid.Column="2" HorizontalAlignment="Right">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock x:ConnectionId='4'
                                Grid.Row="0"
                                HorizontalAlignment="Right"
                                FontSize="12"
                                Foreground="#4CAF50"
                                                                                                                         />
                            <StackPanel Grid.Row="1" HorizontalAlignment="Right">
                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                    <TextBlock FontWeight="SemiBold" Text="Giá gốc:" />
                                    <TextBlock x:ConnectionId='6'
                                        Margin="4,0,0,0"
                                        Foreground="#555555"
                                                                                                                              />
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                    <TextBlock FontWeight="SemiBold" Text="Giá bán:" />
                                    <TextBlock x:ConnectionId='5'
                                        Margin="4,0,0,0"
                                        Foreground="#555555"
                                                                                                                              />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Expander.Header>

                <Expander.Content>
                    <StackPanel Margin="32,0,16,16" Spacing="5">
                        <Grid x:ConnectionId='8'
                            Margin="0,16,0,4"
                            Padding="12"
                                                                                                                                                                     
                            CornerRadius="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                Orientation="Horizontal">
                                <TextBlock x:ConnectionId='21'
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                                                                                                                                                           />
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock x:ConnectionId='18' FontWeight="SemiBold"                                                   />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:ConnectionId='19'
                                        FontSize="12"
                                        Foreground="#666666"
                                                                                                                                                 />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text=" - " />
                                    <TextBlock x:ConnectionId='20'
                                        FontSize="12"
                                        Foreground="#666666"
                                                                                                                                               />
                                </StackPanel>
                            </StackPanel>
                            <Image x:ConnectionId='17'
                                Grid.Column="2"
                                Width="28"
                                Height="28"
                                VerticalAlignment="Center"
                                                                                                                                                                 />
                        </Grid>
                        <ItemsControl x:ConnectionId='9'                                               >
                            <ItemsControl.ItemTemplate>
                                <DataTemplate                             >
                                    <Grid x:ConnectionId='11' Margin="0,0,0,8" Padding="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Image x:ConnectionId='12'
                                            Width="40"
                                            Height="40"
                                                                                            />
                                        <Grid Grid.Column="1" Margin="12,0,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock x:ConnectionId='14'
                                                Grid.Row="0"
                                                Margin="0,0,0,2"
                                                FontWeight="SemiBold"
                                                                                          />
                                            <StackPanel Grid.Row="1">
                                                <StackPanel Margin="0,0,0,2" Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="#666666"
                                                        Text="Số lượng:" />
                                                    <TextBlock x:ConnectionId='16'
                                                        Margin="4,0,0,0"
                                                        FontSize="12"
                                                        Foreground="#666666"
                                                                                              />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="#666666"
                                                        Text="Giá:" />
                                                    <TextBlock x:ConnectionId='15'
                                                        Margin="4,0,0,0"
                                                        FontSize="12"
                                                        Foreground="#666666"
                                                                                                                                             />
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Column="2" HorizontalAlignment="Right">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                HorizontalAlignment="Right"
                                                FontWeight="SemiBold"
                                                Foreground="#666666"
                                                Text="Tổng tiền:" />
                                            <TextBlock x:ConnectionId='13'
                                                Grid.Row="2"
                                                HorizontalAlignment="Right"
                                                FontWeight="SemiBold"
                                                Foreground="#4CAF50"
                                                                                                                                          />
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Expander.Content>
            </Expander>
        </DataTemplate>
    </Page.Resources>

    <Grid x:ConnectionId='22' x:Name="ContentArea">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left Side: Customer Info  -->
            <Border
                Grid.Column="0"
                Padding="20"
                VerticalAlignment="Top"
                Background="White"
                CornerRadius="25">
                <StackPanel Width="280" Padding="15">
                    <TextBlock
                        Margin="0,0,0,0"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#0ABB6A"
                        Text="Thông tin khách hàng" />
                    <Image x:ConnectionId='24'
                        Grid.Column="2"
                        Width="120"
                        Height="120"
                        Margin="0,12"
                        VerticalAlignment="Center"
                                                                                                                                                     />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            FontWeight="SemiBold"
                            Foreground="#0ABB6A"
                            Text="ID:" />
                        <TextBlock x:ConnectionId='25'
                            Grid.Row="0"
                            Grid.Column="1"
                            Foreground="#555555"
                                                                                       />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            FontWeight="SemiBold"
                            Foreground="#0ABB6A"
                            Text="Tên:" />
                        <TextBlock x:ConnectionId='26'
                            Grid.Row="1"
                            Grid.Column="1"
                            Foreground="#555555"
                                                                                 />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            FontWeight="SemiBold"
                            Foreground="#0ABB6A"
                            Text="Giới tính:" />
                        <TextBlock x:ConnectionId='27'
                            Grid.Row="2"
                            Grid.Column="1"
                            Foreground="#555555"
                                                                                                                               />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            FontWeight="SemiBold"
                            Foreground="#0ABB6A"
                            Text="SĐT:" />
                        <TextBlock x:ConnectionId='28'
                            Grid.Row="3"
                            Grid.Column="1"
                            Foreground="#555555"
                                                                                  />

                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            FontWeight="SemiBold"
                            Foreground="#0ABB6A"
                            Text="Email:" />
                        <TextBlock x:ConnectionId='29'
                            Grid.Row="4"
                            Grid.Column="1"
                            Foreground="#555555"
                                                                                  />

                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            FontWeight="SemiBold"
                            Foreground="#0ABB6A"
                            Text="Điểm tích lũy:" />
                        <TextBlock x:ConnectionId='30'
                            Grid.Row="5"
                            Grid.Column="1"
                            Foreground="#555555"
                                                                                          />

                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            FontWeight="SemiBold"
                            Foreground="#0ABB6A"
                            Text="Số đơn hàng:" />
                        <TextBlock x:ConnectionId='31'
                            Grid.Row="6"
                            Grid.Column="1"
                            Foreground="#555555"
                                                                               />

                        <TextBlock
                            Grid.Row="7"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            FontWeight="SemiBold"
                            Foreground="#0ABB6A"
                            Text="Tổng chi:" />
                        <TextBlock x:ConnectionId='32'
                            Grid.Row="7"
                            Grid.Column="1"
                            Foreground="#555555"
                                                                                                                               />
                    </Grid>
                </StackPanel>
            </Border>

            <!--  Right Side: Customer Orders  -->
            <Border
                Grid.Column="2"
                Padding="20"
                Background="White"
                CornerRadius="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        Margin="10"
                        Orientation="Horizontal"
                        Spacing="10">
                        <TextBox Width="500" PlaceholderText="Tìm kiếm..." />
                        <CalendarDatePicker PlaceholderText="Chọn ngày" />
                    </StackPanel>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:ConnectionId='23' ItemTemplate="{StaticResource OrderItemTemplate}"                                                              />
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>

