<?xml version="1.0" encoding="utf-8" ?>
<Page x:ConnectionId='1'
    x:Class="csc13001_plant_pos.View.SalePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:csc13001_plant_pos.Model"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="CategoryButtonTemplate"                            >
            <Button x:ConnectionId='20'
                Padding="12,8"
                                                                                                                   
                Command="{Binding DataContext.SelectCategoryCommand, ElementName=PageRoot}"
                                           
                CornerRadius="14"
                FontWeight="Bold"
                                                                                                                   >
                <StackPanel Orientation="Horizontal">
                    <FontIcon Margin="0,0,8,0" FontSize="10" />
                    <TextBlock x:ConnectionId='21' FontSize="10"                                   />
                </StackPanel>
            </Button>
        </DataTemplate>

        <DataTemplate x:Key="ProductItemTemplate"                           >
            <Grid x:ConnectionId='14'
                Width="180"
                Height="270"
                Margin="8"
                              
                                           
                Translation="0,0,8">
                <Grid.Shadow>
                    <ThemeShadow />
                </Grid.Shadow>
                <Border Background="White" />
                <Image x:ConnectionId='15'
                    Width="180"
                    Height="180"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                                                            />
                <StackPanel Margin="4,4,4,8" VerticalAlignment="Bottom">
                    <TextBlock x:ConnectionId='16'
                        HorizontalAlignment="Left"
                        FontSize="12"
                                                         
                        TextWrapping="Wrap" />
                    <TextBlock x:ConnectionId='17'
                        Margin="0,4,0,0"
                        HorizontalAlignment="Left"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="Green"
                                                                                                             />
                    <TextBlock HorizontalAlignment="Right" FontSize="11">
                        <Run Text="Kho:" />
                        <Run x:ConnectionId='18' FontWeight="Bold"                                    />
                    </TextBlock>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!--  Order item template  -->
        <DataTemplate x:Key="OrderItemTemplate"                                >
            <StackPanel x:ConnectionId='3' CornerRadius="15">
                <Border
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    Background="White">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Spacing="10">
                            <Image x:ConnectionId='6'
                                Width="50"
                                Height="50"
                                                                        />
                            <StackPanel>
                                <TextBlock x:ConnectionId='7'
                                    FontSize="16"
                                    FontWeight="Bold"
                                                                     
                                    TextWrapping="Wrap" />
                                <TextBlock x:ConnectionId='8'
                                    FontSize="12"
                                    Foreground="Gray"
                                                                      />
                                <TextBlock x:ConnectionId='9'
                                    FontSize="12"
                                    FontWeight="Bold"
                                                                                                                     />
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <Button x:ConnectionId='10'
                                        Width="30"
                                        Height="30"
                                        Command="{Binding DataContext.DecreaseQuantityCommand, ElementName=PageRoot}"
                                                                   
                                        Content="-"
                                        CornerRadius="10"
                                        FontSize="10" />
                                    <TextBlock x:ConnectionId='11'
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        FontWeight="Bold"
                                                                              />
                                    <Button x:ConnectionId='12'
                                        Width="30"
                                        Height="30"
                                        Command="{Binding DataContext.IncreaseQuantityCommand, ElementName=PageRoot}"
                                                                   
                                        Content="+"
                                        CornerRadius="10"
                                        FontSize="10" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <Button x:ConnectionId='4'
                            Grid.Column="1"
                            Width="32"
                            Height="32"
                            Margin="0,5,0,0"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding DataContext.RemoveItemCommand, ElementName=PageRoot}"
                                                       >
                            <FontIcon FontSize="7" Glyph="" />
                        </Button>
                        <Button x:ConnectionId='5'
                            Grid.Column="1"
                            Width="30"
                            Height="30"
                            VerticalAlignment="Bottom"
                                                    
                            CornerRadius="10">
                            <FontIcon FontSize="6" Glyph="" />
                        </Button>
                    </Grid>
                </Border>
                <Border
                    Height="2"
                    Margin="0,0,0,0"
                    Background="#EBEBEB"
                    CornerRadius="10" />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid x:ConnectionId='22' x:Name="PageRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!--  Product Panel  -->
        <Grid Grid.Column="0" Margin="0,0,0,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Categories  -->
            <ListView x:ConnectionId='28'
                Grid.Row="0"
                ItemTemplate="{StaticResource CategoryButtonTemplate}"
                                                                        
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.HorizontalScrollMode="Enabled"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollMode="Disabled"
                SelectionMode="None">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>

            <!--  Products  -->
            <GridView x:ConnectionId='29'
                Grid.Row="1"
                Margin="0,10,0,0"
                Padding="0,0,0,250"
                ItemTemplate="{StaticResource ProductItemTemplate}"
                                                                              
                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                SelectionMode="None">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid HorizontalAlignment="Center" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>
        </Grid>

        <!--  Order Panel  -->
        <Grid
            Grid.Column="1"
            Margin="0,0,0,20"
            Padding="10"
            Background="White"
            CornerRadius="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,8">
                <StackPanel Spacing="8">
                    <TextBlock
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="#0ABB6A"
                        Text="Đơn hàng hiện tại" />
                    <TextBox
                        Margin="10,0,10,0"
                        Background="#F5F5F5"
                        BorderThickness="0"
                        FontSize="14"
                        PlaceholderText="Nhập số điện thoại khách hàng" />
                    <ComboBox
                        Margin="10,0,10,0"
                        HorizontalAlignment="Stretch"
                        Background="#F5F5F5"
                        BorderThickness="0"
                        FontSize="14"
                        PlaceholderText="Chọn mã giảm giá"
                        SelectedIndex="0">
                        <ComboBoxItem Content="Giảm 10%" />
                        <ComboBoxItem Content="Giảm 20%" />
                        <ComboBoxItem Content="Giảm 30%" />
                    </ComboBox>
                </StackPanel>
            </Grid>

            <!--  Order Items  -->
            <Border
                Grid.Row="1"
                Margin="10,0,10,10"
                Padding="0,16,0,0"
                Background="#F2F2F2"
                BorderThickness="1"
                CornerRadius="25">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListView x:ConnectionId='27'
                        IsItemClickEnabled="False"
                        ItemTemplate="{StaticResource OrderItemTemplate}"
                                                                                   
                        SelectionMode="None" />
                </ScrollViewer>
            </Border>

            <!--  Order Summary và Button  -->
            <StackPanel
                Grid.Row="2"
                Margin="10,0,10,0"
                VerticalAlignment="Bottom"
                Spacing="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,4,0"
                            FontSize="16"
                            Foreground="Gray"
                            Text="Tổng sản phẩm:" />
                        <TextBlock x:ConnectionId='26'
                            FontSize="16"
                            Foreground="Gray"
                                                                              />
                    </StackPanel>
                    <TextBlock x:ConnectionId='25'
                        Grid.Column="1"
                        FontSize="16"
                        FontWeight="Bold"
                                                                                                                      />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        FontSize="16"
                        Foreground="Gray"
                        Text="Giảm giá: 10%" />
                    <TextBlock x:ConnectionId='24'
                        Grid.Column="1"
                        FontSize="16"
                        FontWeight="Bold"
                                                                                                                            />
                </Grid>

                <Border
                    Margin="0,10,0,10"
                    BorderBrush="LightGray"
                    BorderThickness="1" />

                <Grid Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Tổng tiền" />
                    <TextBlock x:ConnectionId='23'
                        Grid.Column="1"
                        FontSize="18"
                        FontWeight="Bold"
                                                                                                                   />
                </Grid>

                <Button
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    Background="#0ABB6A"
                    Content="Xuất hoá đơn"
                    CornerRadius="16"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>

