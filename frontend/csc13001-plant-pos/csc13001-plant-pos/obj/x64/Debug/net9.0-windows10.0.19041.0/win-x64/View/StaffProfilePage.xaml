<?xml version="1.0" encoding="utf-8" ?>
<Page x:ConnectionId='1'
    x:Class="csc13001_plant_pos.View.StaffProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:csc13001_plant_pos.Model"
    xmlns:orderDto="using:csc13001_plant_pos.DTO.OrderDTO"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="DatePicker">
            <Setter Property="MinHeight" Value="50" />
        </Style>

        <!--  Order Item Template  -->
        <DataTemplate x:Key="OrderItemTemplate"                                   >
            <Expander x:ConnectionId='3'
                Margin="0,0,0,8"
                Padding="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Background="White"
                BorderBrush="#E5E5E5"
                BorderThickness="1"
                CornerRadius="8"
                IsExpanded="False">
                <Expander.Header>
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Spacing="12">
                            <FontIcon
                                FontSize="20"
                                Foreground="#4CAF50"
                                Glyph="&#xE8EC;" />
                            <StackPanel>
                                <!--  Mã đơn  -->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,4,0"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Mã đơn: " />
                                    <TextBlock x:ConnectionId='9'
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                                                />
                                </StackPanel>

                                <!--  Mã khách hàng  -->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,4,0"
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="Mã khách hàng: " />
                                    <TextBlock x:ConnectionId='8'
                                        FontSize="12"
                                        Foreground="#666666"
                                                                            />
                                </StackPanel>

                                <!--  Tên khách hàng  -->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,4,0"
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="Tên khách hàng: " />
                                    <TextBlock x:ConnectionId='7'
                                        FontSize="12"
                                        Foreground="#666666"
                                                                      />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <Grid Grid.Column="2" HorizontalAlignment="Right">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock x:ConnectionId='4'
                                Grid.Row="0"
                                HorizontalAlignment="Right"
                                FontSize="12"
                                Foreground="#4CAF50"
                                                                                                            />

                            <StackPanel Grid.Row="1" HorizontalAlignment="Right">
                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                    <TextBlock FontWeight="SemiBold" Text="Giá gốc:" />
                                    <TextBlock x:ConnectionId='6'
                                        Margin="4,0,0,0"
                                        Foreground="#555555"
                                                                                                                 />
                                </StackPanel>

                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                    <TextBlock FontWeight="SemiBold" Text="Giá bán:" />
                                    <TextBlock x:ConnectionId='5'
                                        Margin="4,0,0,0"
                                        Foreground="#555555"
                                                                                                                 />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Expander.Header>

                <Expander.Content>
                    <StackPanel>
                        <Grid x:ConnectionId='10'
                            Margin="32,16,16,4"
                            Padding="12"
                                                                                                                                                        
                            CornerRadius="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                Orientation="Horizontal">
                                <TextBlock x:ConnectionId='23'
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                                                                                                                                              />
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock x:ConnectionId='20' FontWeight="SemiBold"                                      />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:ConnectionId='21'
                                        FontSize="12"
                                        Foreground="#666666"
                                                                                                                                    />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text=" - " />
                                    <TextBlock x:ConnectionId='22'
                                        FontSize="12"
                                        Foreground="#666666"
                                                                                                                                  />
                                </StackPanel>
                            </StackPanel>

                            <Image x:ConnectionId='19'
                                Grid.Column="2"
                                Width="28"
                                Height="28"
                                VerticalAlignment="Center"
                                                                                                                                                    />
                        </Grid>
                        <ItemsControl x:ConnectionId='11'                                  >
                            <ItemsControl.ItemTemplate>
                                <DataTemplate                             >
                                    <Grid x:ConnectionId='13' Margin="32,0,16,0" Padding="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Image x:ConnectionId='14'
                                            Width="40"
                                            Height="40"
                                                                               />
                                        <Grid Grid.Column="1" Margin="12,0,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock x:ConnectionId='16'
                                                Grid.Row="0"
                                                Margin="0,0,0,2"
                                                FontWeight="SemiBold"
                                                                             />
                                            <StackPanel Grid.Row="1">
                                                <StackPanel Margin="0,0,0,2" Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="#666666"
                                                        Text="Số lượng:" />
                                                    <TextBlock x:ConnectionId='18'
                                                        Margin="4,0,0,0"
                                                        FontSize="12"
                                                        Foreground="#666666"
                                                                                 />
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="#666666"
                                                        Text="Giá:" />
                                                    <TextBlock x:ConnectionId='17'
                                                        Margin="4,0,0,0"
                                                        FontSize="12"
                                                        Foreground="#666666"
                                                                                                                                />
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>

                                        <Grid Grid.Column="2" HorizontalAlignment="Right">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                HorizontalAlignment="Right"
                                                FontWeight="SemiBold"
                                                Foreground="#666666"
                                                Text="Tổng tiền:" />
                                            <TextBlock x:ConnectionId='15'
                                                Grid.Row="2"
                                                HorizontalAlignment="Right"
                                                FontWeight="SemiBold"
                                                Foreground="#4CAF50"
                                                                                                                             />
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Expander.Content>
            </Expander>
        </DataTemplate>
    </Page.Resources>
    <Grid x:ConnectionId='24' x:Name="ContentArea">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Padding="20"
                VerticalAlignment="Top"
                Background="White"
                CornerRadius="25">
                <StackPanel Width="280" Padding="15">
                    <TextBlock
                        Margin="0,0,0,0"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#0ABB6A"
                        Text="Thông tin nhân viên" />
                    <!--  Staff avatar  -->
                    <Grid
                        Width="120"
                        Height="120"
                        Margin="0,12,0,12">
                        <Border
                            Width="120"
                            Height="120"
                            CornerRadius="60">
                            <Border.Background>
                                <ImageBrush ImageSource="https://res.cloudinary.com/djyugezvf/image/upload/v1735137936/csc13008/avatar/avatars_6759d0d5eb6a720ac748a335.jpg" />
                            </Border.Background>
                        </Border>
                        <Border
                            Width="28"
                            Height="28"
                            Margin="-8,-8,8,3"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Background="#0ABB6A"
                            BorderThickness="2"
                            CornerRadius="16">
                            <FontIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="14"
                                Foreground="White"
                                Glyph="&#xE89E;" />
                        </Border>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <!--  ID  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            FontWeight="SemiBold"
                            Foreground="#0ABB6A"
                            Text="ID:" />
                        <TextBlock x:ConnectionId='26'
                            Grid.Row="0"
                            Grid.Column="1"
                            Foreground="#555555"
                                                                                    />

                        <!--  Tên  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            FontWeight="SemiBold"
                            Foreground="#0ABB6A"
                            Text="Tên:" />
                        <TextBlock x:ConnectionId='27'
                            Grid.Row="1"
                            Grid.Column="1"
                            Foreground="#555555"
                                                                                      />

                        <!--  Giới tính  -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            FontWeight="SemiBold"
                            Foreground="#0ABB6A"
                            Text="Giới tính:" />
                        <TextBlock x:ConnectionId='28'
                            Grid.Row="2"
                            Grid.Column="1"
                            Foreground="#555555"
                                                                                                                                />

                        <!--  SĐT  -->
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            FontWeight="SemiBold"
                            Foreground="#0ABB6A"
                            Text="SĐT:" />
                        <TextBlock x:ConnectionId='29'
                            Grid.Row="3"
                            Grid.Column="1"
                            Foreground="#555555"
                                                                                   />

                        <!--  Email  -->
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            FontWeight="SemiBold"
                            Foreground="#0ABB6A"
                            Text="Email:" />
                        <TextBlock x:ConnectionId='30'
                            Grid.Row="4"
                            Grid.Column="1"
                            Foreground="#555555"
                                                                                   />

                        <!--  Ngày bắt đầu  -->
                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            FontWeight="SemiBold"
                            Foreground="#0ABB6A"
                            Text="Ngày bắt đầu:" />
                        <TextBlock x:ConnectionId='31'
                            Grid.Row="5"
                            Grid.Column="1"
                            Foreground="#555555"
                                                                                                                                         />


                        <!--  Số đơn hàng  -->
                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            FontWeight="SemiBold"
                            Foreground="#0ABB6A"
                            Text="Số đơn hàng:" />
                        <TextBlock x:ConnectionId='32'
                            Grid.Row="6"
                            Grid.Column="1"
                            Foreground="#555555"
                                                                               />

                        <!--  Doanh thu  -->
                        <TextBlock
                            Grid.Row="7"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            FontWeight="SemiBold"
                            Foreground="#0ABB6A"
                            Text="Doanh thu:" />
                        <TextBlock x:ConnectionId='33'
                            Grid.Row="7"
                            Grid.Column="1"
                            Foreground="#555555"
                                                                                                                              />
                    </Grid>
                </StackPanel>
            </Border>

            <Border
                Grid.Column="2"
                Padding="20"
                Background="White"
                CornerRadius="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        Margin="10"
                        Orientation="Horizontal"
                        Spacing="10">
                        <TextBox Width="500" PlaceholderText="Tìm kiếm..." />
                        <CalendarDatePicker PlaceholderText="Chọn ngày" />
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:ConnectionId='25'
                            x:Name="OrdersItemsControl"
                            ItemTemplate="{StaticResource OrderItemTemplate}"
                                                                         />
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Page>

