<Page
    x:Class="csc13001_plant_pos.View.DetailProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:csc13001_plant_pos.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <conv:CurrencyConverter x:Key="CurrencyConverter" />
            <conv:WateringNeed x:Key="WateringNeed" />
            <conv:CareLevel x:Key="CareLevel" />
            <conv:LightRequirement x:Key="LightRequirement" />
            <conv:SizeConverter x:Key="SizeConverter" />
        </ResourceDictionary>
    </Page.Resources>
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                HorizontalAlignment="Left"
                Click="BackButton_Click"
                Content="&#xE830;"
                FontFamily="Segoe MDL2 Assets"
                Style="{StaticResource AccentButtonStyle}" />

            <Button
                Grid.Column="1"
                Padding="10,6"
                BorderThickness="0"
                Click="ShowProductDialogAsync"
                CornerRadius="4"
                Style="{StaticResource BlueAccentButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE70F;" />
                    <TextBlock VerticalAlignment="Center" Text="Sửa thông tin" />
                </StackPanel>
            </Button>
        </Grid>



        <!--  Main Content  -->
        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="7*" />
            </Grid.ColumnDefinitions>

            <!--  Product Image  -->
            <Border
                Grid.Column="0"
                Margin="0,0,16,0"
                Background="#F5F7F9"
                CornerRadius="12">
                <Grid>
                    <Image
                        Margin="20"
                        Source="{x:Bind CurrentProduct.ImageUrl, Mode=OneWay}"
                        Stretch="Uniform" />
                </Grid>
            </Border>

            <!--  Product Details  -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Padding="12,0,12,24" Spacing="16">
                    <!--  Product Title and ID  -->
                    <StackPanel>
                        <TextBlock
                            FontSize="28"
                            FontWeight="SemiBold"
                            Foreground="#1E3932"
                            Text="{x:Bind CurrentProduct.Name, Mode=OneWay}" />
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock
                                FontSize="24"
                                FontWeight="SemiBold"
                                Foreground="#1E3932"
                                Text="Mã sản phẩm: " />
                            <TextBlock
                                FontSize="24"
                                Foreground="#666666"
                                Text="{x:Bind CurrentProduct.ProductId, Mode=OneWay}" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Price Section  -->
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock
                            FontSize="22"
                            FontWeight="Bold"
                            Foreground="#4CAF50"
                            Text="{x:Bind CurrentProduct.SalePrice, Converter={StaticResource CurrencyConverter}, Mode=OneWay}" />
                    </StackPanel>

                    <!--  Stock Information  -->
                    <Border
                        Padding="12,8"
                        Background="#F5F7F9"
                        CornerRadius="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon
                                FontFamily="Segoe MDL2 Assets"
                                Foreground="#4CAF50"
                                Glyph="&#xE719;" />
                            <TextBlock FontWeight="SemiBold" Text="Số lượng tồn kho:" />
                            <TextBlock Text="{x:Bind CurrentProduct.Stock}" />
                        </StackPanel>
                    </Border>

                    <!--  Product Specifications  -->
                    <Grid
                        Padding="12"
                        Background="#F5F7F9"
                        CornerRadius="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Row separators  -->
                        <Rectangle
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Height="1"
                            VerticalAlignment="Bottom"
                            Fill="#E0E0E0" />
                        <Rectangle
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Height="1"
                            VerticalAlignment="Bottom"
                            Fill="#E0E0E0" />
                        <Rectangle
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Height="1"
                            VerticalAlignment="Bottom"
                            Fill="#E0E0E0" />
                        <Rectangle
                            Grid.Row="3"
                            Grid.ColumnSpan="2"
                            Height="1"
                            VerticalAlignment="Bottom"
                            Fill="#E0E0E0" />
                        <Rectangle
                            Grid.Row="4"
                            Grid.ColumnSpan="2"
                            Height="1"
                            VerticalAlignment="Bottom"
                            Fill="#E0E0E0" />
                        <Rectangle
                            Grid.Row="5"
                            Grid.ColumnSpan="2"
                            Height="1"
                            VerticalAlignment="Bottom"
                            Fill="#E0E0E0" />
                        <Rectangle
                            Grid.Row="6"
                            Grid.ColumnSpan="2"
                            Height="1"
                            VerticalAlignment="Bottom"
                            Fill="#E0E0E0" />
                        <Rectangle
                            Grid.Row="7"
                            Grid.ColumnSpan="2"
                            Height="1"
                            VerticalAlignment="Bottom"
                            Fill="#E0E0E0" />

                        <!--  Specifications  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,12,24,12"
                            FontWeight="SemiBold"
                            Text="Tên thông thường:" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,12,0,12"
                            Text="{x:Bind CurrentProduct.Name, Mode=OneWay}" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,12,24,12"
                            FontWeight="SemiBold"
                            Text="Mô tả:" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,12,0,12"
                            Text="{x:Bind CurrentProduct.Description, Mode=OneWay}" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,12,24,12"
                            FontWeight="SemiBold"
                            Text="Kích thước chậu:" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,12,0,12"
                            Text="{x:Bind CurrentProduct.Size, Converter={StaticResource SizeConverter}, Mode=OneWay}" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,12,24,12"
                            FontWeight="SemiBold"
                            Text="Chiều cao tổng:" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="0,12,0,12"
                            Text="150 - 160 cm" />

                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="0,12,24,12"
                            FontWeight="SemiBold"
                            Text="Độ khó:" />
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="0,12,0,12"
                            Text="{x:Bind CurrentProduct.CareLevel, Converter={StaticResource CareLevel}, Mode=OneWay}" />

                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="0"
                            Margin="0,12,24,12"
                            FontWeight="SemiBold"
                            Text="Yêu cầu ánh sáng:" />
                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="1"
                            Margin="0,12,0,12"
                            Text="{x:Bind CurrentProduct.LightRequirement, Converter={StaticResource LightRequirement}, Mode=OneWay}" />

                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="0"
                            Margin="0,12,24,12"
                            FontWeight="SemiBold"
                            Text="Nhu cầu nước:" />
                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="1"
                            Margin="0,12,0,12"
                            Text="{x:Bind CurrentProduct.WateringSchedule, Converter={StaticResource WateringNeed}, Mode=OneWay}" />

                        <TextBlock
                            Grid.Row="7"
                            Grid.Column="0"
                            Margin="0,12,24,12"
                            FontWeight="SemiBold"
                            Text="Thể loại:" />
                        <TextBlock
                            Grid.Row="7"
                            Grid.Column="1"
                            Margin="0,12,0,12"
                            Text="{x:Bind CurrentProduct.Category.Name, Mode=OneWay}" />

                        <TextBlock
                            Grid.Row="8"
                            Grid.Column="0"
                            Margin="0,12,24,12"
                            FontWeight="SemiBold"
                            Text="Mô tả:" />
                        <TextBlock
                            Grid.Row="8"
                            Grid.Column="1"
                            Margin="0,12,0,12"
                            Text="{x:Bind CurrentProduct.Category.Description, Mode=OneWay}" />
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
