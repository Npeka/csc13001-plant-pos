<Page
    x:Class="csc13001_plant_pos.View.DetailProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Back Button  -->
        <Button
            Grid.Row="0"
            HorizontalAlignment="Left"  
            Click="BackButton_Click"
            Content=""
            FontFamily="Segoe MDL2 Assets"
            Style="{StaticResource AccentButtonStyle}" />

        <!--  Main Content  -->
        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="7*" />
            </Grid.ColumnDefinitions>

            <!--  Product Image  -->
            <Border
                Grid.Column="0"
                Margin="0,0,16,0"
                Background="#F5F7F9"
                CornerRadius="12">
                <Grid>
                    <Grid.Shadow>
                        <ThemeShadow />
                    </Grid.Shadow>
                    <Image
                        Margin="20"
                        Source="{x:Bind ViewModel.CurrentProduct.ImageUrl, Mode=OneWay}"
                        Stretch="Uniform" />
                    <Border
                        Padding="12,4"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#4CAF50"
                        CornerRadius="0,0,8,0"
                        Visibility="{x:Bind ViewModel.IsTopSelling, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="Top 10 sản phẩm bán chạy nhất" />
                    </Border>
                </Grid>
            </Border>

            <!--  Product Details  -->
            <ScrollViewer
                Grid.Column="1"
                VerticalAlignment="Center"
                VerticalScrollBarVisibility="Auto">
                <StackPanel Padding="12,0,12,24" Spacing="16">
                    <!--  Product Title and ID  -->
                    <StackPanel>
                        <TextBlock
                            FontSize="28"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource SystemAccentColorDark1}"
                            Text="{x:Bind ViewModel.CurrentProduct.Name, Mode=OneWay}" />
                        <Border
                            Width="40"
                            Height="4"
                            Margin="0,8,8,8"
                            HorizontalAlignment="Left"
                            Background="{StaticResource SystemAccentColorDark2}"
                            CornerRadius="2" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="14"
                            Foreground="#224229"
                            Text="{x:Bind ViewModel.CurrentProduct.Description, Mode=OneWay}"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <!--  Price Section  -->
                    <StackPanel Orientation="Vertical" Spacing="12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,4,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="#666666"
                                Text="Giá nhập: " />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="#666666"
                                Text="{x:Bind ViewModel.CurrentProduct.PurchasePrice, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,4,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="#4CAF50"
                                Text="Giá bán: " />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="22"
                                FontWeight="Bold"
                                Foreground="#4CAF50"
                                Text="{x:Bind ViewModel.CurrentProduct.SalePrice, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Stock Information  -->
                    <Border
                        Padding="12,8"
                        Background="#F5F7F9"
                        CornerRadius="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon
                                FontFamily="Segoe MDL2 Assets"
                                Foreground="#4CAF50"
                                Glyph="" />
                            <TextBlock FontWeight="SemiBold" Text="Số lượng tồn kho:" />
                            <TextBlock Text="{x:Bind ViewModel.CurrentProduct.Stock, Mode=OneWay}" />
                        </StackPanel>
                    </Border>

                    <!--  Product Specifications  -->
                    <Grid
                        Padding="12"
                        Background="#F5F7F9"
                        CornerRadius="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Row separators  -->
                        <Rectangle
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Height="1"
                            VerticalAlignment="Bottom"
                            Fill="#E0E0E0" />
                        <Rectangle
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Height="1"
                            VerticalAlignment="Bottom"
                            Fill="#E0E0E0" />
                        <Rectangle
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Height="1"
                            VerticalAlignment="Bottom"
                            Fill="#E0E0E0" />
                        <Rectangle
                            Grid.Row="3"
                            Grid.ColumnSpan="2"
                            Height="1"
                            VerticalAlignment="Bottom"
                            Fill="#E0E0E0" />
                        <Rectangle
                            Grid.Row="4"
                            Grid.ColumnSpan="2"
                            Height="1"
                            VerticalAlignment="Bottom"
                            Fill="#E0E0E0" />

                        <!--  Specifications  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,12,24,12"
                            FontWeight="SemiBold"
                            Text="Phân loại:" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Foreground="#1E3932"
                            Text="{x:Bind ViewModel.CurrentProduct.Category.Name, Mode=OneWay}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,12,24,12"
                            FontWeight="SemiBold"
                            Text="Môi trường:" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Foreground="#1E3932"
                            Text="{x:Bind ViewModel.CurrentProduct.EnvironmentType, Mode=OneWay}" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,12,24,12"
                            FontWeight="SemiBold"
                            Text="Kích thước:" />
                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,12,0,12"
                            Orientation="Horizontal"
                            Spacing="2">
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.Size, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=1}"
                                Glyph="&#xE735;" />
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.Size, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=2}"
                                Glyph="&#xE735;" />
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.Size, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=3}"
                                Glyph="&#xE735;" />
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.Size, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=4}"
                                Glyph="&#xE735;" />
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.Size, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=5}"
                                Glyph="&#xE735;" />
                        </StackPanel>

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,12,24,12"
                            FontWeight="SemiBold"
                            Text="Độ khó:" />
                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="0,12,0,12"
                            Orientation="Horizontal"
                            Spacing="2">
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.CareLevel, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=1}"
                                Glyph="&#xE735;" />
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.CareLevel, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=2}"
                                Glyph="&#xE735;" />
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.CareLevel, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=3}"
                                Glyph="&#xE735;" />
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.CareLevel, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=4}"
                                Glyph="&#xE735;" />
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.CareLevel, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=5}"
                                Glyph="&#xE735;" />
                        </StackPanel>

                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="0,12,24,12"
                            FontWeight="SemiBold"
                            Text="Yêu cầu ánh sáng:" />
                        <StackPanel
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="0,12,0,12"
                            Orientation="Horizontal"
                            Spacing="2">
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.LightRequirement, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=1}"
                                Glyph="&#xE735;" />
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.LightRequirement, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=2}"
                                Glyph="&#xE735;" />
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.LightRequirement, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=3}"
                                Glyph="&#xE735;" />
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.LightRequirement, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=4}"
                                Glyph="&#xE735;" />
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.LightRequirement, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=5}"
                                Glyph="&#xE735;" />
                        </StackPanel>

                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="0"
                            Margin="0,12,24,12"
                            FontWeight="SemiBold"
                            Text="Nhu cầu nước:" />
                        <StackPanel
                            Grid.Row="5"
                            Grid.Column="1"
                            Margin="0,12,0,12"
                            Orientation="Horizontal"
                            Spacing="2">
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.WateringSchedule, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=1}"
                                Glyph="&#xE735;" />
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.WateringSchedule, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=2}"
                                Glyph="&#xE735;" />
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.WateringSchedule, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=3}"
                                Glyph="&#xE735;" />
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.WateringSchedule, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=4}"
                                Glyph="&#xE735;" />
                            <FontIcon
                                FontSize="12"
                                Foreground="{x:Bind ViewModel.CurrentProduct.WateringSchedule, Mode=OneWay, Converter={StaticResource StarColorConverter}, ConverterParameter=5}"
                                Glyph="&#xE735;" />
                        </StackPanel>
                    </Grid>

                    <!--  Add to Cart Button  -->
                    <Button
                        Padding="24,12"
                        HorizontalAlignment="Left"
                        Background="#D3F9D8"
                        Click="AddToCart_Click"
                        Content="Sửa thông tin"
                        CornerRadius="8"
                        Foreground="#666666"
                        Style="{StaticResource AccentButtonStyle}">
                        <Button.Resources>
                            <ResourceDictionary>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8" />
                                </Style>
                            </ResourceDictionary>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
