<Page
    x:Class="csc13001_plant_pos.View.TopSellingProductsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid
        MaxWidth="1200"
        Padding="24,20"
        HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Tiêu đề trang  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            FontSize="28"
            FontWeight="SemiBold"
            Text="Danh sách sản phẩm bán chạy" />

        <!--  Panel chứa các điều khiển tìm kiếm và lọc  -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Thanh tìm kiếm với icon  -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox
                    x:Name="SearchBox"
                    Grid.Column="0"
                    Height="40"
                    CornerRadius="4"
                    PlaceholderText="Tìm kiếm theo tên hoặc mã sản phẩm..."
                    Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.ThemeDictionaries>
                                <ResourceDictionary x:Key="Light">
                                    <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="#F5F5F5" />
                                </ResourceDictionary>
                            </ResourceDictionary.ThemeDictionaries>
                        </ResourceDictionary>
                    </TextBox.Resources>
                </TextBox>

                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                    <ComboBox
                        x:Name="PositionFilter"
                        Width="180"
                        Height="40"
                        HorizontalAlignment="Stretch"
                        BorderBrush="{ThemeResource TextControlBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        PlaceholderText="Sắp xếp theo"
                        SelectedIndex="0"
                        SelectedValue="{x:Bind ViewModel.SortType, Mode=TwoWay}"
                        SelectedValuePath="Tag">
                        <ComboBoxItem Content="Số lượng bán ra" Tag="TopSelling" />
                        <ComboBoxItem Content="Số lượng tồn kho" Tag="Remain" />
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid
            Grid.Row="2"
            Padding="0"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <Grid
                Grid.Row="0"
                Padding="24,16"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,0,1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="Danh sách sản phẩm" />

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <FontIcon
                        Margin="0,0,8,0"
                        FontSize="16"
                        Glyph="&#xE8A1;" />
                    <TextBlock
                        x:Name="ProductCount"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Opacity="0.8"
                        Text="{x:Bind ViewModel.ProductCount, Mode=OneWay}" />
                </StackPanel>
            </Grid>

            <!--  DataGrid  -->
            <controls:DataGrid
                x:Name="EmployeesGrid"
                Grid.Row="1"
                Padding="0"
                AlternatingRowBackground="{ThemeResource SystemControlAltHighAcrylicElementBrush}"
                AlternatingRowForeground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                AutoGenerateColumns="False"
                CanUserReorderColumns="False"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                HorizontalGridLinesBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                IsReadOnly="True"
                ItemsSource="{x:Bind ViewModel.FilteredSellingProducts, Mode=OneWay}"
                RowHeight="70"
                SelectionMode="Single">
                <controls:DataGrid.Resources>
                    <SolidColorBrush x:Key="DataGridColumnHeaderBackgroundColor" Color="Transparent" />
                    <SolidColorBrush x:Key="DataGridColumnHeaderForegroundColor" Color="#505050" />
                    <SolidColorBrush x:Key="DataGridGridLinesBrush" Color="#E8E8E8" />
                    <Thickness x:Key="DataGridRowGroupHeaderMargin">0</Thickness>
                </controls:DataGrid.Resources>

                <controls:DataGrid.RowStyle>
                    <Style TargetType="controls:DataGridRow">
                        <Setter Property="Padding" Value="0,8" />
                        <Setter Property="FontSize" Value="14" />
                    </Style>
                </controls:DataGrid.RowStyle>

                <controls:DataGrid.Columns>
                    <!--  Cột ảnh sản phẩm  -->
                    <controls:DataGridTemplateColumn Width="100" Header="Ảnh">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Border
                                        Width="56"
                                        Height="56"
                                        Margin="4,0"
                                        CornerRadius="6">
                                        <Border.Background>
                                            <SolidColorBrush Color="{ThemeResource SystemAltLowColor}" />
                                        </Border.Background>
                                        <Image Source="{Binding Product.ImageUrl}" Stretch="UniformToFill" />
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>

                    <!--  Cột mã sản phẩm  -->
                    <controls:DataGridTextColumn
                        Width="80"
                        Binding="{Binding Product.ProductId}"
                        Header="Mã">
                        <controls:DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Consolas, Courier New, Monospace" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="TextAlignment" Value="Center" />
                                <Setter Property="Padding" Value="0,6" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                            </Style>
                        </controls:DataGridTextColumn.ElementStyle>
                    </controls:DataGridTextColumn>

                    <!--  Cột tên sản phẩm  -->
                    <controls:DataGridTextColumn
                        Width="*"
                        Binding="{Binding Product.Name}"
                        Header="Tên sản phẩm">
                        <controls:DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                <Setter Property="TextWrapping" Value="NoWrap" />
                                <Setter Property="Margin" Value="12,0" />
                            </Style>
                        </controls:DataGridTextColumn.ElementStyle>
                    </controls:DataGridTextColumn>

                    <!--  Cột số lượng bán  -->
                    <controls:DataGridTemplateColumn Width="130" Header="Số lượng bán">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon
                                        Margin="0,0,6,0"
                                        FontSize="16"
                                        Foreground="#0078D7"
                                        Glyph="&#xE8EC;" />
                                    <TextBlock
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        FontWeight="SemiBold"
                                        Text="{Binding SalesQuantity}" />
                                </Grid>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>

                    <!--  Cột tồn kho  -->
                    <controls:DataGridTemplateColumn Width="120" Header="Tồn kho">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Text="{Binding Product.Stock}" />
                                </Grid>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                </controls:DataGrid.Columns>
            </controls:DataGrid>

        </Grid>

        <Grid Grid.Row="4" Margin="0,8,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="4">
                <TextBlock VerticalAlignment="Center" Text="Số sản phẩm mỗi trang:" />
                <ComboBox
                    Width="72"
                    ItemsSource="{x:Bind ViewModel.PageSizeOptions}"
                    SelectedItem="{x:Bind ViewModel.PageSize, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="8">
                <Button Command="{x:Bind ViewModel.PreviousPageCommand}">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE76B;" />
                </Button>
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <TextBlock VerticalAlignment="Center" Text="{x:Bind ViewModel.CurrentPage, Mode=OneWay}" />
                    <TextBlock VerticalAlignment="Center" Text=" / " />
                    <TextBlock VerticalAlignment="Center" Text="{x:Bind ViewModel.TotalPages, Mode=OneWay}" />
                </StackPanel>
                <Button Command="{x:Bind ViewModel.NextPageCommand}">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE76C;" />
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
