<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="csc13001_plant_pos.View.WarehouseManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:inventoryDto="using:csc13001_plant_pos.DTO.InventoryDTO"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:csc13001_plant_pos.Model"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="InventoryItemTemplate" x:DataType="inventoryDto:InventoryListDto">
            <Expander
                Margin="0,0,0,8"
                Padding="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Background="White"
                BorderBrush="#E5E5E5"
                BorderThickness="1"
                CornerRadius="8"
                IsExpanded="False">
                <Expander.Header>
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Spacing="12">
                            <FontIcon
                                FontSize="20"
                                Foreground="#4CAF50"
                                Glyph="" />
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,4,0"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Mã lô hàng: " />
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="{x:Bind InventoryId, Mode=OneWay}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,4,0"
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="Nhà cung cấp: " />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="{x:Bind Supplier, Mode=OneWay}" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <Grid Grid.Column="2" HorizontalAlignment="Right">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                HorizontalAlignment="Right"
                                FontSize="12"
                                Foreground="#4CAF50"
                                Text="{x:Bind PurchaseDate, Mode=OneWay, Converter={StaticResource DateToStringConverter}}" />
                            <StackPanel
                                Grid.Row="1"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <TextBlock FontWeight="SemiBold" Text="Tổng tiền:" />
                                <TextBlock
                                    Margin="4,0,0,0"
                                    Foreground="#555555"
                                    Text="{x:Bind TotalPrice, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Expander.Header>

                <Expander.Content>
                    <StackPanel Margin="32,0,16,16" Spacing="5">
                        <ItemsControl ItemsSource="{x:Bind InventoryItems, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="model:InventoryItem">
                                    <Grid Padding="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Image
                                            Width="40"
                                            Height="40"
                                            Source="{x:Bind Product.ImageUrl, Mode=OneWay}" />
                                        <Grid Grid.Column="1" Margin="12,0,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                Margin="0,0,0,2"
                                                FontWeight="SemiBold"
                                                Text="{x:Bind Product.Name, Mode=OneWay}" />
                                            <StackPanel Grid.Row="1">
                                                <StackPanel Margin="0,0,0,2" Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="#666666"
                                                        Text="Số lượng:" />
                                                    <TextBlock
                                                        Margin="4,0,0,0"
                                                        FontSize="12"
                                                        Foreground="#666666"
                                                        Text="{x:Bind Quantity, Mode=OneWay}" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="#666666"
                                                        Text="Giá nhập:" />
                                                    <TextBlock
                                                        Margin="4,0,0,0"
                                                        FontSize="12"
                                                        Foreground="#666666"
                                                        Text="{x:Bind PurchasePrice, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Column="2" HorizontalAlignment="Right">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                HorizontalAlignment="Right"
                                                FontWeight="SemiBold"
                                                Foreground="#666666"
                                                Text="Tổng tiền:" />
                                            <TextBlock
                                                Grid.Row="2"
                                                HorizontalAlignment="Right"
                                                FontWeight="SemiBold"
                                                Foreground="#4CAF50"
                                                Text="{x:Bind TotalItemPrice, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Expander.Content>
            </Expander>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Margin="10"
            Orientation="Horizontal"
            Spacing="10">
            <TextBox
                Width="500"
                PlaceholderText="Tìm kiếm theo mã lô, nhà cung cấp..."
                Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <CalendarDatePicker Date="{x:Bind ViewModel.SelectedDate, Mode=TwoWay}" PlaceholderText="Chọn ngày" />
            <Button
                Padding="8,8"
                Content="Thêm lô hàng"
                CornerRadius="5"
                FontSize="14"
                Foreground="#666666" />
        </StackPanel>
        <ScrollViewer
            Grid.Row="1"
            Padding="20,0,20,20"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl
                Padding="5,0,5,0"
                ItemTemplate="{StaticResource InventoryItemTemplate}"
                ItemsSource="{x:Bind ViewModel.FilteredInventoryOrders, Mode=OneWay}" />
        </ScrollViewer>
    </Grid>
</Page>