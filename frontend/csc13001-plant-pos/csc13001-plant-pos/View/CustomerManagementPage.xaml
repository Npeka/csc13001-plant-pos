<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="csc13001_plant_pos.View.CustomerManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20" Width="1200" Height="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Thông tin tổng quan (Dashboard) -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Tổng số khách hàng -->
            <Border Background="#0078D7" CornerRadius="8" Margin="0,0,5,0">
                <StackPanel Padding="15">
                    <TextBlock Text="Tổng số khách hàng" Foreground="White" FontSize="14"/>
                    <TextBlock x:Name="TotalCustomersCount" Text="{x:Bind ViewModel.totalCustomers, Mode=OneWay}" 
                           Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Khách hàng mới trong tháng -->
            <Border Background="#107C10" CornerRadius="8" Grid.Column="1" Margin="5,0,5,0">
                <StackPanel Padding="15">
                    <TextBlock Text="Khách hàng mới trong tháng" Foreground="White" FontSize="14"/>
                    <TextBlock x:Name="NewCustomersCount" Text="{x:Bind ViewModel.newCustomersThisMonth, Mode=OneWay}" 
                           Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Khách hàng hạng cao -->
            <Border Background="#5C2D91" CornerRadius="8" Grid.Column="2" Margin="5,0,0,0">
                <StackPanel Padding="15">
                    <TextBlock Text="Khách hàng cao cấp" Foreground="White" FontSize="14"/>
                    <TextBlock x:Name="PremiumCustomersCount" Text="{x:Bind ViewModel.premiumCustomers, Mode=OneWay}" 
                           Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Khu vực tìm kiếm và lọc -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Hàng 1: Thanh tìm kiếm -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="SearchBox" Grid.Column="0" PlaceholderText="Tìm kiếm theo tên, ID..."
                         Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay}"
                            TextChanged="{x:Bind ViewModel.SearchBox_TextChanged, Mode=OneWay}"/>

                <Button x:Name="AddNewCustomer" Grid.Column="1" Margin="10,0,0,0"
                    Content="+ Thêm khách hàng"/>
            </Grid>

            <!-- Hàng 2: Các bộ lọc -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Bộ lọc ngày -->
                <CalendarDatePicker x:Name="DateFilter"
                PlaceholderText="Ngày đăng ký"
                DateChanged="{x:Bind ViewModel.DateFilter_DateChanged}"
                Width="180"
                VerticalAlignment="Center"
                Grid.Column="0"/>

                <!-- Bộ lọc hạng -->
                <ComboBox x:Name="RankFilter" Width="150" PlaceholderText="Chọn hạng"
                      SelectionChanged="{x:Bind ViewModel.RankFilter_SelectionChanged}"
                      VerticalAlignment="Center"
                      Grid.Column="1" Margin="10,0,0,0">
                    <ComboBoxItem Content="All"/>
                    <ComboBoxItem Content="None"/>
                    <ComboBoxItem Content="Bronze"/>
                    <ComboBoxItem Content="Silver"/>
                    <ComboBoxItem Content="Gold"/>
                    <ComboBoxItem Content="Platinum"/>
                </ComboBox>
                <!-- Bộ lọc trạng thái -->
                <ComboBox x:Name="StatusFilter" Width="150" PlaceholderText="Trạng thái"
                      VerticalAlignment="Center"
                      Grid.Column="2" Margin="10,0,0,0">
                    <ComboBoxItem Content="Tất cả"/>
                    <ComboBoxItem Content="Hoạt động"/>
                    <ComboBoxItem Content="Đã khóa"/>
                </ComboBox>

                <!-- Nút Đặt lại -->
                <Button Content="Đặt lại bộ lọc" Click="{x:Bind ViewModel.ResetFilter_Click}"
                    VerticalAlignment="Center"
                    Grid.Column="4"/>
            </Grid>
        </Grid>

        <!-- Danh sách khách hàng -->
        <Grid Grid.Row="2">
            <controls:DataGrid x:Name="CustomersGrid" ItemsSource="{x:Bind ViewModel.filteredCustomerList, Mode=OneWay}" 
                           AutoGenerateColumns="False" HeadersVisibility="Column" 
                           SelectionMode="Single" IsReadOnly="True"
                           GridLinesVisibility="Horizontal"
                           >
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn Header="ID" Binding="{Binding Custmer.CustomerId}" Width="70"/>
                    <controls:DataGridTextColumn Header="Họ và tên" Binding="{Binding Custmer.Name}" Width="*"/>
                    <controls:DataGridTextColumn Header="Số điện thoại" Binding="{Binding Custmer.Phone}" Width="130"/>
                    <controls:DataGridTextColumn Header="Điểm số" Binding="{Binding Custmer.LoyaltyPoints}" Width="80"/>
                    <controls:DataGridTemplateColumn Header="Hạng thẻ" Width="120">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Padding="5" CornerRadius="10" BorderThickness="0"
         Margin="5,2">
                                    <TextBlock Text="{Binding Custmer.LoyaltyCardType}" FontWeight="SemiBold" 
                HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>

                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                    
                    <controls:DataGridTemplateColumn Header="Thao tác" Width="180">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <!-- Button Cập nhật -->
                                    <Button  Margin="0,0,5,0"
            Background="#2196F3" Foreground="White" Padding="8,4">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Sửa" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                            <FontIcon Glyph="&#xE70F;" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>

                                    <!-- Button Xóa -->
                                    <Button Margin="5,0,0,0"
            Background="#757575" Foreground="White" Padding="8,4">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Xóa" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                            <FontIcon Glyph="&#xE74D;" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>

                    </controls:DataGridTemplateColumn>
                </controls:DataGrid.Columns>
            </controls:DataGrid>
        </Grid>
    </Grid>
</Page>
