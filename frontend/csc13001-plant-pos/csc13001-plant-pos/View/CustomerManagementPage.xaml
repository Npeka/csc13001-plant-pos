<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="csc13001_plant_pos.View.CustomerManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:csc13001_plant_pos.View.UI"
    xmlns:conv="using:csc13001_plant_pos.Converter"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <conv:DateToStringConverter
                x:Key="DateToStringConverter" />
        </ResourceDictionary>
    </Page.Resources>
    <Grid
        Padding="24"
        RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>

        <ui:PageTitle
            Title="Quản lý Khách hàng"
            Grid.Row="0" />

        <!--  Thông tin tổng quan (Dashboard)  -->
        <Grid Grid.Row="1" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Tổng số khách hàng -->
            <Border Grid.Column="0" Margin="5" CornerRadius="12" BorderThickness="0"
            Background="{ThemeResource SystemAccentColor}">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                <Grid Padding="18,15" Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon Grid.Column="1" Glyph="&#xE716;" FontSize="28" Foreground="White" Opacity="0.8" />

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Tổng số khách hàng" 
                       Foreground="White" FontSize="14" Opacity="0.8" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,5,0,5" 
                       Text="{x:Bind ViewModel.TotalCustomers, Mode=OneWay}"
                       FontSize="30" FontWeight="SemiBold" Foreground="White" />
                    <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                        <FontIcon Glyph="&#xE72C;" FontSize="12" Foreground="#7FFFFFFF" VerticalAlignment="Center" Margin="0,0,5,0" />
                        <TextBlock Text="Cập nhật mới nhất" Foreground="#7FFFFFFF" FontSize="12" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Khách hàng mới trong tháng -->
            <Border Grid.Column="1" Margin="5" CornerRadius="12" BorderThickness="0"
            Background="#00BFFF">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                <Grid Padding="18,15" Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon Grid.Column="1" Glyph="&#xE77F;" FontSize="28" Foreground="White" Opacity="0.8" />

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Khách hàng mới" 
                       Foreground="White" FontSize="14" Opacity="0.8" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,5,0,5"
                       Text="{x:Bind ViewModel.NewCustomersThisMonth, Mode=OneWay}"
                       FontSize="30" FontWeight="SemiBold" Foreground="White" />
                    <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                        <FontIcon Glyph="&#xE787;" FontSize="12" Foreground="#7FFFFFFF" VerticalAlignment="Center" Margin="0,0,5,0" />
                        <TextBlock Text="Tháng hiện tại" Foreground="#7FFFFFFF" FontSize="12" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Khách hàng cao cấp -->
            <Border Grid.Column="2" Margin="5" CornerRadius="12" BorderThickness="0"
            Background="#B3B1AF">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                <Grid Padding="18,15" Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon Grid.Column="1" Glyph="&#xE734;" FontSize="28" Foreground="White" Opacity="0.8" />

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Khách hàng cao cấp" 
                       Foreground="White" FontSize="14" Opacity="0.8" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,5,0,5"
                       Text="{x:Bind ViewModel.PremiumCustomers, Mode=OneWay}"
                       FontSize="30" FontWeight="SemiBold" Foreground="White" />
                    <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                        <FontIcon Glyph="&#xE735;" FontSize="12" Foreground="#7FFFFFFF" VerticalAlignment="Center" Margin="0,0,5,0" />
                        <TextBlock Text="Tần suất mua sắm cao" Foreground="#7FFFFFFF" FontSize="12" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <!--  Khu vực tìm kiếm và lọc  -->
        <Grid
            Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Hàng 1: Thanh tìm kiếm  -->
            <Grid
                Grid.Row="0"
                Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox
                    x:Name="SearchBox"
                    Grid.Column="0"
                    PlaceholderText="Tìm kiếm theo tên hoặc ID"
                    Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <Button
    x:Name="AddNew"
    Grid.Column="1"
                    Style="{StaticResource AccentButtonStyle}"
    Margin="10,0,10,0"
    Click="AddNewCustomer">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
            Glyph="&#xE8FA;"
            FontFamily="Segoe MDL2 Assets"
            Margin="0,0,8,0" />
                        <TextBlock Text="Thêm khách hàng" />
                    </StackPanel>
                </Button>

                <Button Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Export"  Click="ExportButton_Click" Style="{StaticResource AccentButtonStyle}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="12" Glyph="&#xE8DE;" />
                                <TextBlock VerticalAlignment="Center" Text="Xuất báo cáo" />
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>

            <!--  Hàng 2: Các bộ lọc  -->
            <Grid
                Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Bộ lọc ngày  -->
                <CalendarDatePicker
                    x:Name="DateFilter"
                    Grid.Column="0"
                    Width="180"
                    VerticalAlignment="Center"
                    Date="{x:Bind ViewModel.DateQuery, Mode=TwoWay}"
                    PlaceholderText="Ngày đăng ký" />

                <!--  Bộ lọc hạng  -->
                <ComboBox
                    x:Name="RankFilter"
                    Grid.Column="1"
                    Width="150"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    PlaceholderText="Chọn hạng"
                    SelectedValue="{x:Bind ViewModel.RankQuery, Mode=TwoWay}"
                    SelectedValuePath="Tag"
                    >
                    <ComboBoxItem
                        Tag="All" Content="Tất cả"/>
                    <ComboBoxItem
                        Tag="None" Content="Vô hạng"/>
                    <ComboBoxItem
                        Tag="Bronze" Content="Hạng đồng"/>
                    <ComboBoxItem
                        Tag="Silver" Content="Hạng bạc"/>
                    <ComboBoxItem
                        Tag="Gold" Content="Hạng vàng"/>
                    <ComboBoxItem
                        Tag="Platinum" Content="Hạng bạch kim"/>
                </ComboBox>

                <!--  Nút Đặt lại  -->
                <Button
                    Grid.Column="4"
                    VerticalAlignment="Center"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="{x:Bind ViewModel.ResetFilter_Click}"
                    Content="Đặt lại bộ lọc" />
            </Grid>
        </Grid>

        <!--  Danh sách khách hàng  -->
        <Grid
            Grid.Row="3">
            <controls:DataGrid
                x:Name="CustomersGrid"
                AutoGenerateColumns="False"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{x:Bind ViewModel.FilteredCustomerList, Mode=OneWay}"
                SelectionMode="Single">
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn
                        Width="70"
                        Binding="{Binding Customer.CustomerId}"
                        Header="ID" />
                    <controls:DataGridTextColumn
                        Width="*"
                        Binding="{Binding Customer.Name}"
                        Header="Họ và tên" />
                    <controls:DataGridTextColumn
                        Width="150"
                        Binding="{Binding Customer.Phone}"
                        Header="Số điện thoại" />
                    <controls:DataGridTextColumn
                        Width="80"
                        Binding="{Binding Customer.LoyaltyPoints}"
                        Header="Điểm số" />
                    <controls:DataGridTemplateColumn
                        Width="120"
                        Header="Hạng thẻ">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="5,2"
                                    Padding="5"
                                    BorderThickness="0"
                                    CornerRadius="10">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Text="{Binding Customer.LoyaltyCardType}" />
                                </Border>
                            </DataTemplate>

                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                    <controls:DataGridTextColumn
                        Width="150"
                        Binding="{Binding Customer.CreateAt, Converter={StaticResource DateToStringConverter}}"
                        Header="Ngày tạo" />
                    <controls:DataGridTemplateColumn
                        Width="200"
                        Header="Thao tác">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                                    <!--  Button Cập nhật  -->
                                    <Button
                                        Padding="6,4"
                                        Background="#E3F2FD"
                                        Click="EditCustomerInformation"
                                        CornerRadius="4"
                                        Style="{StaticResource AccentButtonStyle}"
                                        Foreground="#1976D2"
                                        Tag="{Binding}">
                                        <StackPanel
                                            Orientation="Horizontal">
                                            <FontIcon
                                                VerticalAlignment="Center"
                                                Glyph="&#xE70F;" />
                                            <TextBlock
                                                Margin="0,0,5,0"
                                                VerticalAlignment="Center"
                                                Text="Sửa" />
                                        </StackPanel>
                                    </Button>

                                    <!--  Button Xóa  -->
                                    <Button
                                        Padding="6,4"
                                        Background="#FFEBEE"
                                        Style="{StaticResource AccentButtonStyle}"
                                        CornerRadius="4"
                                        Click="DeleteCustomer"
                                        Foreground="#C62828"
                                        Tag="{Binding}">
                                        <StackPanel
                                            Orientation="Horizontal">
                                            <FontIcon
                                                VerticalAlignment="Center"
                                                Glyph="&#xE74D;" />
                                            <TextBlock
                                                Margin="0,0,5,0"
                                                VerticalAlignment="Center"
                                                Text="Xóa" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>

                    </controls:DataGridTemplateColumn>
                </controls:DataGrid.Columns>
            </controls:DataGrid>
        </Grid>
    </Grid>
</Page>
