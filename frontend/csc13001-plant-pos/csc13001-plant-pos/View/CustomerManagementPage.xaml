<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="csc13001_plant_pos.View.CustomerManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:conv="using:csc13001_plant_pos.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:csc13001_plant_pos.View.UI"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <LinearGradientBrush x:Key="TotalCustomersGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0" Color="#FF8900" />
            <GradientStop Offset="1" Color="#C7460F" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="NewCustomersGradient" StartPoint="1,0" EndPoint="0,0">
            <GradientStop Offset="0" Color="#3A7BD5" />
            <GradientStop Offset="1" Color="#3A6073" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PremiumCustomersGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0" Color="#759BFF" />
            <GradientStop Offset="1" Color="#843CF6" />
        </LinearGradientBrush>
    </Page.Resources>
    <Grid Padding="24" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:PageTitle Title="Quản lý Khách hàng" Grid.Row="0" />

        <!--  Thông tin tổng quan (Dashboard)  -->
        <Grid Grid.Row="1" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Tổng số khách hàng  -->
            <Border
                Grid.Column="0"
                Background="{StaticResource TotalCustomersGradient}"
                CornerRadius="8">
                <Grid Padding="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Phần thông tin  -->
                    <StackPanel Grid.Column="0">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="Tổng số khách hàng" />
                        <TextBlock
                            x:Name="TotalCustomersCount"
                            Margin="0,5,0,0"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{x:Bind ViewModel.TotalCustomers, Mode=OneWay}" />
                        <StackPanel
                            Margin="0,4,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="4">
                            <FontIcon
                                VerticalAlignment="Center"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="14"
                                Foreground="#B3FFFFFF"
                                Glyph="&#xE72C;" />
                            <TextBlock
                                Margin="0,4,0,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="#B3FFFFFF"
                                Text="Cập nhật mới nhất" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Phần icon  -->
                    <FontIcon
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="40"
                        Foreground="White"
                        Glyph="&#xEBDA;" />
                </Grid>
            </Border>

            <!--  Khách hàng mới trong tháng  -->
            <Border
                Grid.Column="1"
                Background="{StaticResource NewCustomersGradient}"
                CornerRadius="8">
                <Grid Padding="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Phần thông tin  -->
                    <StackPanel Grid.Column="0">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="Khách hàng mới" />
                        <TextBlock
                            x:Name="NewCustomersCount"
                            Margin="0,5,0,0"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{x:Bind ViewModel.NewCustomersThisMonth, Mode=OneWay}" />
                        <StackPanel
                            Margin="0,4,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="4">
                            <FontIcon
                                VerticalAlignment="Center"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="14"
                                Foreground="#B3FFFFFF"
                                Glyph="&#xEC92;" />
                            <TextBlock
                                Margin="0,4,0,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="#B3FFFFFF"
                                Text="Tháng hiện tại" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Phần icon  -->
                    <FontIcon
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="40"
                        Foreground="White"
                        Glyph="&#xE8FA;" />
                </Grid>
            </Border>

            <!--  Khách hàng cao cấp  -->
            <Border
                Grid.Column="2"
                Background="{StaticResource PremiumCustomersGradient}"
                CornerRadius="8">
                <Grid Padding="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Phần thông tin  -->
                    <StackPanel Grid.Column="0">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="Khách hàng cao cấp" />
                        <TextBlock
                            x:Name="PremiumCustomersCount"
                            Margin="0,5,0,0"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{x:Bind ViewModel.PremiumCustomers, Mode=OneWay}" />
                        <StackPanel
                            Margin="0,4,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="4">
                            <FontIcon
                                VerticalAlignment="Center"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="14"
                                Foreground="#B3FFFFFF"
                                Glyph="&#xE735;" />
                            <TextBlock
                                Margin="0,4,0,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="#B3FFFFFF"
                                Text="Tần xuất mua sắm cao" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Phần icon  -->
                    <FontIcon
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="40"
                        Foreground="White"
                        Glyph="&#xECA7;" />
                </Grid>
            </Border>
        </Grid>
        <!--  Khu vực tìm kiếm và lọc  -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Hàng 1: Thanh tìm kiếm  -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox
                    x:Name="SearchBox"
                    Grid.Column="0"
                    PlaceholderText="Tìm kiếm theo tên hoặc ID"
                    Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <Button
                    x:Name="AddNew"
                    Grid.Column="1"
                    Margin="10,0,10,0"
                    Click="AddNewCustomer"
                    Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            Margin="0,0,8,0"
                            FontFamily="Segoe MDL2 Assets"
                            Glyph="&#xE8FA;" />
                        <TextBlock Text="Thêm khách hàng" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Click="ExportButton_Click"
                    Content="Export"
                    Style="{StaticResource AccentButtonStyle}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="12" Glyph="&#xE8DE;" />
                                <TextBlock VerticalAlignment="Center" Text="Xuất báo cáo" />
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>

            <!--  Hàng 2: Các bộ lọc  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Bộ lọc ngày  -->
                <CalendarDatePicker
                    x:Name="DateFilter"
                    Grid.Column="0"
                    Width="180"
                    VerticalAlignment="Center"
                    Date="{x:Bind ViewModel.DateQuery, Mode=TwoWay}"
                    PlaceholderText="Ngày đăng ký" />

                <!--  Bộ lọc hạng  -->
                <ComboBox
                    x:Name="RankFilter"
                    Grid.Column="1"
                    Width="150"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    PlaceholderText="Chọn hạng"
                    SelectedValue="{x:Bind ViewModel.RankQuery, Mode=TwoWay}"
                    SelectedValuePath="Tag">
                    <ComboBoxItem Content="Tất cả" Tag="All" />
                    <ComboBoxItem Content="Vô hạng" Tag="None" />
                    <ComboBoxItem Content="Hạng đồng" Tag="Bronze" />
                    <ComboBoxItem Content="Hạng bạc" Tag="Silver" />
                    <ComboBoxItem Content="Hạng vàng" Tag="Gold" />
                    <ComboBoxItem Content="Hạng bạch kim" Tag="Platinum" />
                </ComboBox>

                <!--  Nút Đặt lại  -->
                <Button
                    Grid.Column="4"
                    VerticalAlignment="Center"
                    Click="{x:Bind ViewModel.ResetFilter_Click}"
                    Content="Đặt lại bộ lọc"
                    Style="{StaticResource AccentButtonStyle}" />
            </Grid>
        </Grid>

        <!--  Danh sách khách hàng  -->
        <Grid Grid.Row="3">
            <controls:DataGrid
                x:Name="CustomersGrid"
                AutoGenerateColumns="False"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{x:Bind ViewModel.FilteredCustomerList, Mode=OneWay}"
                SelectionMode="Single">
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn
                        Width="70"
                        Binding="{Binding Customer.CustomerId}"
                        Header="ID" />
                    <controls:DataGridTextColumn
                        Width="*"
                        Binding="{Binding Customer.Name}"
                        Header="Họ và tên" />
                    <controls:DataGridTextColumn
                        Width="150"
                        Binding="{Binding Customer.Phone}"
                        Header="Số điện thoại" />
                    <controls:DataGridTextColumn
                        Width="80"
                        Binding="{Binding Customer.LoyaltyPoints}"
                        Header="Điểm số" />
                    <controls:DataGridTemplateColumn Width="100" Header="Hạng thẻ">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="5,2"
                                    Padding="5"
                                    BorderThickness="0"
                                    CornerRadius="10">
                                    <Image
                                        Width="28"
                                        Height="28"
                                        Margin="0,12"
                                        VerticalAlignment="Center"
                                        Source="{Binding Customer.LoyaltyCardType, Mode=OneWay, Converter={StaticResource MembershipTypeToImageConverter}}" />
                                </Border>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                    <controls:DataGridTextColumn
                        Width="150"
                        Binding="{Binding Customer.CreateAt, Converter={StaticResource DateToStringConverter}}"
                        Header="Ngày tạo" />
                    <controls:DataGridTemplateColumn Width="200" Header="Thao tác">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="6">
                                    <Button
                                        Padding="6,4"
                                        Click="ViewCustomer"
                                        CornerRadius="4"
                                        Style="{StaticResource BlueAccentButtonStyle}"
                                        Tag="{Binding}">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Glyph="&#xE7B3;" />
                                            <TextBlock
                                                Margin="0,0,5,0"
                                                VerticalAlignment="Center"
                                                Text="Xem" />
                                        </StackPanel>
                                    </Button>

                                    <Button
                                        Padding="6,4"
                                        Click="EditCustomerInformation"
                                        CornerRadius="4"
                                        Style="{StaticResource BlueAccentButtonStyle}"
                                        Tag="{Binding}">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Glyph="&#xE70F;" />
                                            <TextBlock
                                                Margin="0,0,5,0"
                                                VerticalAlignment="Center"
                                                Text="Sửa" />
                                        </StackPanel>
                                    </Button>

                                    <Button
                                        Padding="6,4"
                                        Click="DeleteCustomer"
                                        CornerRadius="4"
                                        Style="{StaticResource RedAccentButtonStyle}"
                                        Tag="{Binding}">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Glyph="&#xE74D;" />
                                            <TextBlock
                                                Margin="0,0,5,0"
                                                VerticalAlignment="Center"
                                                Text="Xóa" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>

                    </controls:DataGridTemplateColumn>
                </controls:DataGrid.Columns>
            </controls:DataGrid>
        </Grid>
    </Grid>
</Page>
