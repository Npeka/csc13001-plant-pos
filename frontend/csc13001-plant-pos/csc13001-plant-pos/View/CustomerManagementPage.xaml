<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="csc13001_plant_pos.View.CustomerManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:csc13001_plant_pos.View.UI"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid
        Padding="24"
        RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>

        <ui:PageTitle
            Title="Quản lý Khách hàng"
            Grid.Row="0" />

        <!--  Thông tin tổng quan (Dashboard)  -->
        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="250" />
                <ColumnDefinition
                    Width="250" />
                <ColumnDefinition
                    Width="250" />
            </Grid.ColumnDefinitions>

            <!--  Tổng số khách hàng  -->
            <Border
                Margin="0,0,5,0"
                Background="#0078D7"
                CornerRadius="8">
                <StackPanel
                    Padding="15">
                    <TextBlock
                        FontSize="14"
                        Foreground="White"
                        Text="Tổng số khách hàng" />
                    <TextBlock
                        x:Name="TotalCustomersCount"
                        Margin="0,5,0,0"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{x:Bind ViewModel.totalCustomers, Mode=OneWay}" />
                </StackPanel>
            </Border>

            <!--  Khách hàng mới trong tháng  -->
            <Border
                Grid.Column="1"
                Margin="5,0,5,0"
                Background="#107C10"
                CornerRadius="8">
                <StackPanel
                    Padding="15">
                    <TextBlock
                        FontSize="14"
                        Foreground="White"
                        Text="Khách hàng mới trong tháng" />
                    <TextBlock
                        x:Name="NewCustomersCount"
                        Margin="0,5,0,0"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{x:Bind ViewModel.newCustomersThisMonth, Mode=OneWay}" />
                </StackPanel>
            </Border>

            <!--  Khách hàng hạng cao  -->
            <Border
                Grid.Column="2"
                Margin="5,0,0,0"
                Background="#5C2D91"
                CornerRadius="8">
                <StackPanel
                    Padding="15">
                    <TextBlock
                        FontSize="14"
                        Foreground="White"
                        Text="Khách hàng cao cấp" />
                    <TextBlock
                        x:Name="PremiumCustomersCount"
                        Margin="0,5,0,0"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{x:Bind ViewModel.premiumCustomers, Mode=OneWay}" />
                </StackPanel>
            </Border>
        </Grid>

        <!--  Khu vực tìm kiếm và lọc  -->
        <Grid
            Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Hàng 1: Thanh tìm kiếm  -->
            <Grid
                Grid.Row="0"
                Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox
                    x:Name="SearchBox"
                    Grid.Column="0"
                    PlaceholderText="Tìm kiếm theo tên, ID..."
                    Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay}"
                    TextChanged="{x:Bind ViewModel.SearchBox_TextChanged, Mode=OneWay}" />

                <Button
                    x:Name="AddNewCustomer"
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    Content="+ Thêm khách hàng" />
            </Grid>

            <!--  Hàng 2: Các bộ lọc  -->
            <Grid
                Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Bộ lọc ngày  -->
                <CalendarDatePicker
                    x:Name="DateFilter"
                    Grid.Column="0"
                    Width="180"
                    VerticalAlignment="Center"
                    DateChanged="{x:Bind ViewModel.DateFilter_DateChanged}"
                    PlaceholderText="Ngày đăng ký" />

                <!--  Bộ lọc hạng  -->
                <ComboBox
                    x:Name="RankFilter"
                    Grid.Column="1"
                    Width="150"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    PlaceholderText="Chọn hạng"
                    SelectionChanged="{x:Bind ViewModel.RankFilter_SelectionChanged}">
                    <ComboBoxItem
                        Content="All" />
                    <ComboBoxItem
                        Content="None" />
                    <ComboBoxItem
                        Content="Bronze" />
                    <ComboBoxItem
                        Content="Silver" />
                    <ComboBoxItem
                        Content="Gold" />
                    <ComboBoxItem
                        Content="Platinum" />
                </ComboBox>
                <!--  Bộ lọc trạng thái  -->
                <ComboBox
                    x:Name="StatusFilter"
                    Grid.Column="2"
                    Width="150"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    PlaceholderText="Trạng thái">
                    <ComboBoxItem
                        Content="Tất cả" />
                    <ComboBoxItem
                        Content="Hoạt động" />
                    <ComboBoxItem
                        Content="Đã khóa" />
                </ComboBox>

                <!--  Nút Đặt lại  -->
                <Button
                    Grid.Column="4"
                    VerticalAlignment="Center"
                    Click="{x:Bind ViewModel.ResetFilter_Click}"
                    Content="Đặt lại bộ lọc" />
            </Grid>
        </Grid>

        <!--  Danh sách khách hàng  -->
        <Grid
            Grid.Row="3">
            <controls:DataGrid
                x:Name="CustomersGrid"
                AutoGenerateColumns="False"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{x:Bind ViewModel.filteredCustomerList, Mode=OneWay}"
                SelectionMode="Single">
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn
                        Width="70"
                        Binding="{Binding Customer.CustomerId}"
                        Header="ID" />
                    <controls:DataGridTextColumn
                        Width="*"
                        Binding="{Binding Customer.Name}"
                        Header="Họ và tên" />
                    <controls:DataGridTextColumn
                        Width="130"
                        Binding="{Binding Customer.Phone}"
                        Header="Số điện thoại" />
                    <controls:DataGridTextColumn
                        Width="80"
                        Binding="{Binding Customer.LoyaltyPoints}"
                        Header="Điểm số" />
                    <controls:DataGridTemplateColumn
                        Width="120"
                        Header="Hạng thẻ">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="5,2"
                                    Padding="5"
                                    BorderThickness="0"
                                    CornerRadius="10">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Text="{Binding Customer.LoyaltyCardType}" />
                                </Border>
                            </DataTemplate>

                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>

                    <controls:DataGridTemplateColumn
                        Width="180"
                        Header="Thao tác">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                                    <!--  Button Cập nhật  -->
                                    <Button
                                        Margin="0,0,5,0"
                                        Padding="8,4"
                                        Background="#2196F3"
                                        Foreground="White">
                                        <StackPanel
                                            Orientation="Horizontal">
                                            <TextBlock
                                                Margin="0,0,5,0"
                                                VerticalAlignment="Center"
                                                Text="Sửa" />
                                            <FontIcon
                                                VerticalAlignment="Center"
                                                Glyph="&#xE70F;" />
                                        </StackPanel>
                                    </Button>

                                    <!--  Button Xóa  -->
                                    <Button
                                        Margin="5,0,0,0"
                                        Padding="8,4"
                                        Background="#757575"
                                        Foreground="White">
                                        <StackPanel
                                            Orientation="Horizontal">
                                            <TextBlock
                                                Margin="0,0,5,0"
                                                VerticalAlignment="Center"
                                                Text="Xóa" />
                                            <FontIcon
                                                VerticalAlignment="Center"
                                                Glyph="&#xE74D;" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>

                    </controls:DataGridTemplateColumn>
                </controls:DataGrid.Columns>
            </controls:DataGrid>
        </Grid>
    </Grid>
</Page>
