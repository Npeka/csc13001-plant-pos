<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="csc13001_plant_pos.View.DiscountManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:csc13001_plant_pos.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:csc13001_plant_pos.Model"
    x:Name="Root"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="DiscountItemTemplate" x:DataType="model:DiscountProgram">
            <Grid
                Margin="0,0,0,8"
                Padding="16"
                Background="{Binding ApplicableCustomerType, Converter={StaticResource MembershipTypeToBackgroundConverter}}"
                BorderBrush="#E5E5E5"
                BorderThickness="1"
                CornerRadius="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Orientation="Horizontal"
                    Spacing="12">
                    <Image
                        Width="40"
                        Height="40"
                        VerticalAlignment="Center"
                        Source="{x:Bind ApplicableCustomerType, Converter={StaticResource MembershipTypeToImageConverter}}" />
                    <StackPanel>
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{x:Bind Name, Mode=OneWay}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                FontSize="12"
                                Foreground="#666666"
                                Text="{x:Bind StartDate, Mode=OneWay, Converter={StaticResource DateToStringConverter}}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="#666666"
                                Text=" - " />
                            <TextBlock
                                FontSize="12"
                                Foreground="#666666"
                                Text="{x:Bind EndDate, Mode=OneWay, Converter={StaticResource DateToStringConverter}}" />
                        </StackPanel>
                        <HyperlinkButton
                            Margin="0,4,0,0"
                            Padding="8,4"
                            Background="#F5F5F5"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            Content="Sửa chương trình"
                            CornerRadius="4"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Foreground="#666666">
                            <HyperlinkButton.Resources>
                                <SolidColorBrush x:Key="HyperlinkButtonBackgroundPointerOver" Color="#E0E0E0" />
                                <!--  Màu khi hover  -->
                            </HyperlinkButton.Resources>
                        </HyperlinkButton>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Text="{x:Bind DiscountRate, Mode=OneWay, Converter={StaticResource PercentageConverter}}" />
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Text=" OFF" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,4,0"
                            FontSize="12"
                            Foreground="#666666"
                            Text="Mã chương trình:" />
                        <TextBlock
                            FontSize="12"
                            Foreground="#666666"
                            Text="{x:Bind DiscountId, Mode=OneWay}" />
                    </StackPanel>
                    <TextBlock
                        FontSize="12"
                        Foreground="{Binding Converter={StaticResource DiscountStatusToColorConverter}}"
                        Text="{Binding Converter={StaticResource DiscountStatusToTextConverter}}" />
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid
        x:Name="ContentArea"
        Padding="20"
        Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Margin="10"
            Orientation="Horizontal"
            Spacing="10">
            <TextBox Width="500" PlaceholderText="Tìm kiếm..." />
            <CalendarDatePicker PlaceholderText="Chọn ngày" />
            <Button
                Padding="8,8"
                Content="Thêm chương trình"
                CornerRadius="5"
                FontSize="14"
                Foreground="#666666" />
        </StackPanel>
        <ScrollViewer
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Hidden">
            <ListView
                ItemTemplate="{StaticResource DiscountItemTemplate}"
                ItemsSource="{x:Bind ViewModel.Discounts, Mode=OneWay}"
                SelectionMode="None" />
        </ScrollViewer>
    </Grid>
</Page>