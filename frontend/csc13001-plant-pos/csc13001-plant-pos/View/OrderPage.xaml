<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="csc13001_plant_pos.View.OrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:csc13001_plant_pos.Model"
    xmlns:orderDto="using:csc13001_plant_pos.DTO.OrderDTO"
    xmlns:ui="using:csc13001_plant_pos.View.UI"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate
            x:Key="OrderItemTemplate"
            x:DataType="orderDto:OrderListDto">
            <Expander
                Margin="0,0,0,8"
                Padding="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Background="White"
                BorderBrush="#E5E5E5"
                BorderThickness="1"
                CornerRadius="8"
                IsExpanded="False">
                <Expander.Header>
                    <Grid
                        Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="Auto" />
                            <ColumnDefinition
                                Width="*" />
                            <ColumnDefinition
                                Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Spacing="12">
                            <FontIcon
                                FontSize="20"
                                Foreground="#4CAF50"
                                Glyph="&#xE8EC;" />
                            <StackPanel>
                                <StackPanel
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,4,0"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Mã đơn: " />
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="{x:Bind OrderId, Mode=OneWay}" />
                                </StackPanel>
                                <StackPanel
                                    Orientation="Horizontal"
                                    Spacing="8">
                                    <StackPanel
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,4,0"
                                            FontSize="12"
                                            Foreground="#666666"
                                            Text="Mã nhân viên: " />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#666666"
                                            Text="{x:Bind Staff.UserId, Mode=OneWay}" />
                                    </StackPanel>
                                    <StackPanel
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,4,0"
                                            FontSize="12"
                                            Foreground="#666666"
                                            Text="Tên nhân viên: " />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#666666"
                                            Text="{x:Bind Staff.Fullname, Mode=OneWay}" />
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    Visibility="{x:Bind Customer, Converter={StaticResource CustomerVisibilityConverter}}">
                                    <StackPanel
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,4,0"
                                            FontSize="12"
                                            Foreground="#666666"
                                            Text="Mã khách hàng: " />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#666666"
                                            Text="{x:Bind Customer.CustomerId, Mode=OneWay}" />
                                    </StackPanel>
                                    <StackPanel
                                        Orientation="Horizontal"
                                        Visibility="{x:Bind Customer, Converter={StaticResource CustomerVisibilityConverter}}">
                                        <TextBlock
                                            Margin="0,0,4,0"
                                            FontSize="12"
                                            Foreground="#666666"
                                            Text="Tên khách hàng: " />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#666666"
                                            Text="{x:Bind Customer.Name, Mode=OneWay}" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <Grid
                            Grid.Column="2"
                            HorizontalAlignment="Right">
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                HorizontalAlignment="Right"
                                FontSize="12"
                                Foreground="{StaticResource SystemAccentColor}"
                                Text="{x:Bind OrderDate, Mode=OneWay, Converter={StaticResource DateToStringConverter}}" />
                            <StackPanel
                                Grid.Row="1"
                                HorizontalAlignment="Right">
                                <StackPanel
                                    HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        FontWeight="SemiBold"
                                        Text="Giá gốc:" />
                                    <TextBlock
                                        Margin="4,0,0,0"
                                        Foreground="#555555"
                                        Text="{x:Bind TotalPrice, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />
                                </StackPanel>
                                <StackPanel
                                    HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        FontWeight="SemiBold"
                                        Text="Giá bán:" />
                                    <TextBlock
                                        Margin="4,0,0,0"
                                        Foreground="#555555"
                                        Text="{x:Bind FinalPrice, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Expander.Header>

                <Expander.Content>
                    <StackPanel
                        Margin="32,0,16,16"
                        Spacing="5">
                        <Grid
                            Margin="0,16,0,4"
                            Padding="12"
                            Background="{x:Bind DiscountProgram.ApplicableCustomerType, Mode=OneWay, Converter={StaticResource MembershipTypeToBackgroundConverter}}"
                            CornerRadius="8"
                            Visibility="{x:Bind DiscountProgram, Converter={StaticResource DiscountVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="Auto" />
                                <ColumnDefinition
                                    Width="*" />
                                <ColumnDefinition
                                    Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Text="{x:Bind DiscountProgram.DiscountRate, Mode=OneWay, Converter={StaticResource PercentageConverter}, ConverterParameter='invert'}" />
                            </StackPanel>
                            <StackPanel
                                Grid.Column="1">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Text="{x:Bind DiscountProgram.Name, Mode=OneWay}" />
                                <StackPanel
                                    Orientation="Horizontal">
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="{x:Bind DiscountProgram.StartDate, Mode=OneWay, Converter={StaticResource DateToStringConverter}}" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text=" - " />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="{x:Bind DiscountProgram.EndDate, Mode=OneWay, Converter={StaticResource DateToStringConverter}}" />
                                </StackPanel>
                            </StackPanel>
                            <Image
                                Grid.Column="2"
                                Width="28"
                                Height="28"
                                VerticalAlignment="Center"
                                Source="{x:Bind DiscountProgram.ApplicableCustomerType, Mode=OneWay, Converter={StaticResource MembershipTypeToImageConverter}}" />
                        </Grid>
                        <ItemsControl
                            ItemsSource="{x:Bind OrderItems, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate
                                    x:DataType="model:OrderItem">
                                    <Grid
                                        Padding="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition
                                                Width="Auto" />
                                            <ColumnDefinition
                                                Width="*" />
                                            <ColumnDefinition
                                                Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Image
                                            Width="40"
                                            Height="40"
                                            Source="{x:Bind Product.ImageUrl, Mode=OneWay}" />
                                        <Grid
                                            Grid.Column="1"
                                            Margin="12,0,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition
                                                    Height="Auto" />
                                                <RowDefinition
                                                    Height="*" />
                                                <RowDefinition
                                                    Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                Margin="0,0,0,2"
                                                FontWeight="SemiBold"
                                                Text="{x:Bind Product.Name, Mode=OneWay}" />
                                            <StackPanel
                                                Grid.Row="1">
                                                <StackPanel
                                                    Margin="0,0,0,2"
                                                    Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="#666666"
                                                        Text="Số lượng:" />
                                                    <TextBlock
                                                        Margin="4,0,0,0"
                                                        FontSize="12"
                                                        Foreground="#666666"
                                                        Text="{x:Bind Quantity, Mode=OneWay}" />
                                                </StackPanel>
                                                <StackPanel
                                                    Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="#666666"
                                                        Text="Giá:" />
                                                    <TextBlock
                                                        Margin="4,0,0,0"
                                                        FontSize="12"
                                                        Foreground="#666666"
                                                        Text="{x:Bind SalePrice, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                        <Grid
                                            Grid.Column="2"
                                            HorizontalAlignment="Right">
                                            <Grid.RowDefinitions>
                                                <RowDefinition
                                                    Height="Auto" />
                                                <RowDefinition
                                                    Height="*" />
                                                <RowDefinition
                                                    Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                HorizontalAlignment="Right"
                                                FontWeight="SemiBold"
                                                Foreground="#666666"
                                                Text="Tổng tiền:" />
                                            <TextBlock
                                                Grid.Row="2"
                                                HorizontalAlignment="Right"
                                                FontWeight="SemiBold"
                                                Foreground="{StaticResource SystemAccentColor}"
                                                Text="{x:Bind TotalItemPrice, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <StackPanel
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Margin="8"
                                CornerRadius="4"
                                Content="Xoá đơn hàng"
                                Click="DeleteOrderButton_Click"
                                Style="{StaticResource RedAccentButtonStyle}" />

                            <Button
                                Margin="8"
                                CornerRadius="4"
                                Content="Xem hoá đơn"
                                Click="ViewBillButton_Click"
                                Style="{StaticResource AccentButtonStyle}" />
                        </StackPanel>
                    </StackPanel>
                </Expander.Content>
            </Expander>
        </DataTemplate>
    </Page.Resources>

    <Grid
        Padding="24"
        RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>

        <ui:PageTitle
            Title="Quản lý đơn hàng"
            Grid.Row="0" />

        <StackPanel
            Grid.Row="1"
            Orientation="Horizontal"
            Spacing="10">
            <TextBox
                Width="500"
                PlaceholderText="Tìm kiếm theo mã đơn, nhân viên, khách hàng..."
                Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <CalendarDatePicker
                Date="{x:Bind ViewModel.SelectedDate, Mode=TwoWay}"
                PlaceholderText="Chọn ngày" />
        </StackPanel>
        <ScrollViewer
            Grid.Row="2"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl
                ItemTemplate="{StaticResource OrderItemTemplate}"
                ItemsSource="{x:Bind ViewModel.FilteredOrders, Mode=OneWay}" />
        </ScrollViewer>
    </Grid>
</Page>
