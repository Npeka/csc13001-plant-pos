<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="csc13001_plant_pos.View.Authentication.FormResetPassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:csc13001_plant_pos.View.Authentication"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <StackPanel Spacing="15">
        <local:FormTitle Title="Đặt lại mật khẩu của bạn" />

        <TextBlock Margin="0,0,0,10"
                   HorizontalAlignment="Center"
                   FontSize="14"
                   Opacity="0.8"
                   Text="Nhập mật khẩu mới cho tài khoản của bạn."
                   TextWrapping="Wrap" />

        <!--  New Password Field  -->
        <PasswordBox x:Name="NewPassword"
                     Height="40"
                     Padding="10"
                     BorderBrush="Gray"
                     CornerRadius="5"
                     Password="{Binding NewPassword, Mode=TwoWay}"
                     PlaceholderText="Nhập mật khẩu mới" />

        <!--  Confirm Password Field  -->
        <PasswordBox x:Name="ConfirmPassword"
                     Height="40"
                     Padding="10"
                     BorderBrush="Gray"
                     CornerRadius="5"
                     Password="{Binding ConfirmPassword, Mode=TwoWay}"
                     PlaceholderText="Xác nhận mật khẩu mới" />

        <!--  Error Message  -->
        <TextBlock Margin="0,0,0,16"
                   FontSize="14"
                   Foreground="Red"
                   Text="{Binding Error, TargetNullValue=''}"
                   TextWrapping="Wrap"
                   Visibility="{Binding Error, Converter={StaticResource StringToVisibilityConverter}}" />

        <!--  Submit Button  -->
        <Button x:Name="ResetPasswordButton"
                Height="40"
                HorizontalAlignment="Stretch"
                Command="{Binding ResetPasswordCommand}"
                Style="{StaticResource AccentButtonStyle}">
            <Button.Content>
                <TextBlock Text="Đặt lại mật khẩu" />
            </Button.Content>
        </Button>
    </StackPanel>
</UserControl>
