<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="csc13001_plant_pos.View.Authentication.FormLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View.Authentication"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    mc:Ignorable="d">

    <UserControl.Resources>
        <AcrylicBrush
            x:Key="AcrylicBackgroundBrush"
            FallbackColor="Black"
            TintColor="White"
            TintLuminosityOpacity="0"
            TintOpacity="0" />
    </UserControl.Resources>

    <Border
        Width="400"
        Padding="30"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="{StaticResource AcrylicBackgroundBrush}"
        BorderBrush="{StaticResource AccentAAFillColorDisabled}"
        BorderThickness="1"
        CornerRadius="15">
        <ContentPresenter
            Content="{x:Bind Child, Mode=OneWay}" />
    </Border>
</UserControl>
