<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="csc13001_plant_pos.View.Authentication.FormLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:csc13001_plant_pos.View.Authentication"
             mc:Ignorable="d">

    <StackPanel Spacing="15">
        <local:FormTitle Title="Chào mừng đến với cửa hàng cây cảnh" />

        <!--  Username Input  -->
        <TextBox x:Name="Username"
                 Height="40"
                 Padding="10"
                 BorderBrush="Gray"
                 CornerRadius="5"
                 PlaceholderText="Tên đăng nhập"
                 Text="{x:Bind ViewModel.Username, Mode=TwoWay}" />

        <!--  Password Input  -->
        <PasswordBox x:Name="PasswordBox"
                     Height="40"
                     Padding="10"
                     BorderBrush="Gray"
                     CornerRadius="5"
                     PasswordChanged="Password_PasswordChanged"
                     PlaceholderText="Mật khẩu" />

        <!--  Error Message  -->
        <TextBlock x:Name="TextBoxError"
                   Margin="0,0,0,0"
                   FontSize="14"
                   Foreground="Red"
                   Text="{x:Bind ViewModel.Error, Mode=OneWay}"
                   Visibility="{x:Bind ViewModel.Error, Mode=OneWay, Converter={StaticResource ErrorToVisibilityConverter}}" />

        <Button x:Name="LoginButton"
                Height="40"
                HorizontalAlignment="Stretch"
                Command="{Binding LoginCommand}"
                IsEnabled="{Binding IsEnableLoginButton}"
                Style="{StaticResource AccentButtonStyle}">
            <Button.Content>
                <StackPanel Orientation="Horizontal"
                            Spacing="8">
                    <ProgressRing x:Name="ButtonProgressRing"
                                  Width="20"
                                  Height="20"
                                  IsActive="False"
                                  Visibility="Collapsed" />
                    <TextBlock Text="Đăng nhập" />
                </StackPanel>
            </Button.Content>
        </Button>

        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <Hyperlink Click="NavigateToForgotPassword_Click">
                Quên mật khẩu?
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</UserControl>
