<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="csc13001_plant_pos.View.ProductManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:ui="using:csc13001_plant_pos.View.UI"
    xmlns:conv="using:csc13001_plant_pos.Converter"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary
                    x:Key="Light">
                    <SolidColorBrush
                        x:Key="CardBackground"
                        Color="White" />
                    <SolidColorBrush
                        x:Key="CardBorderBrush"
                        Color="#E0E0E0" />
                    <SolidColorBrush
                        x:Key="SubtleFillColorBrush"
                        Color="#F5F5F5" />
                </ResourceDictionary>
                <ResourceDictionary
                    x:Key="Dark">
                    <SolidColorBrush
                        x:Key="CardBackground"
                        Color="#2D2D2D" />
                    <SolidColorBrush
                        x:Key="CardBorderBrush"
                        Color="#505050" />
                    <SolidColorBrush
                        x:Key="SubtleFillColorBrush"
                        Color="#3A3A3A" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <conv:CurrencyConverter
            x:Key="CurrencyConverter" />
            <Style
                x:Key="ActionButtonStyle"
                TargetType="Button">
                <Setter
                    Property="CornerRadius"
                    Value="4" />
                <Setter
                    Property="Padding"
                    Value="12,8" />
                <Setter
                    Property="HorizontalAlignment"
                    Value="Stretch" />
                <Setter
                    Property="FontWeight"
                    Value="SemiBold" />
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid
        Padding="24"
        RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <ui:PageTitle
            Title="Quản lý sản phẩm"
            Grid.Row="0" />

        <Grid
            Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>

            <!-- Thanh tìm kiếm + Bộ lọc -->
            <Grid
                ColumnDefinitions="*,Auto,Auto"
                Margin="0,0,0,10">
                <Grid
                    Grid.Column="0"
                    ColumnDefinitions="Auto,*">
                    <FontIcon
                        Grid.Column="0"
                        Glyph="&#xE721;"
                        FontSize="16"
                        Margin="4,0,8,0"
                        VerticalAlignment="Center" />
                    <TextBox
                        x:Name="SearchBox"
                        Grid.Column="1"
                        PlaceholderText="Tìm kiếm sản phẩm..."
                        Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  />
                </Grid>

                <ComboBox
                    x:Name="CategoryFilter"
                    Grid.Column="1"
                    PlaceholderText="Chọn danh mục"
                    Width="180"
                    Margin="8,0"
                    >
                    <ComboBoxItem
                        Content="Tất cả" />
                    <ComboBoxItem
                        Content="Cây" />
                    <ComboBoxItem
                        Content="Phụ kiện chăm sóc" />
                    <ComboBoxItem
                        Content="Chậu" />
                </ComboBox>

                <ComboBox
                    x:Name="StockFilter"
                    Grid.Column="2"
                    PlaceholderText="Trạng thái"
                    Width="160"
                    SelectionChanged="StockFilter_SelectionChanged">
                    <ComboBoxItem
                        Content="Tất cả" />
                    <ComboBoxItem
                        Content="Còn hàng" />
                    <ComboBoxItem
                        Content="Hết hàng" />
                </ComboBox>
            </Grid>

            <!-- Hàng chứa các nút -->
            <Grid
                Grid.Row="1"
                Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Style="{StaticResource ActionButtonStyle}"
                    Margin="0,0,8,0"
                    Click="AddProduct_Click">
                    <StackPanel
                        Orientation="Horizontal">
                        <FontIcon
                            Glyph="&#xE710;"
                            Margin="0,0,8,0" />
                        <TextBlock
                            Text="Thêm sản phẩm" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Column="1"
                    Style="{StaticResource ActionButtonStyle}"
                    Margin="4,0"
                   >
                    <StackPanel
                        Orientation="Horizontal">
                        <FontIcon
                            Glyph="&#xE8CB;"
                            Margin="0,0,8,0" />
                        <TextBlock
                            Text="Sắp xếp theo giá" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Column="2"
                    Style="{StaticResource ActionButtonStyle}"
                    Margin="8,0,0,0"
                    Click="UpdateCategories_Click">
                    <StackPanel
                        Orientation="Horizontal">
                        <FontIcon
                            Glyph="&#xE70F;"
                            Margin="0,0,8,0" />
                        <TextBlock
                            Text="Cập nhật danh mục" />
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Danh sách sản phẩm -->
            <ScrollViewer
                Grid.Row="2"
                VerticalScrollBarVisibility="Auto">
                <GridView
                    x:Name="ProductGridView"
                    ItemsSource="{x:Bind ViewModel.filteredProductList, Mode=OneWay}"
                    Padding="0"
                    SelectionMode="Single">
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid
                                MaximumRowsOrColumns="4"
                                Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>

                    <GridView.ItemContainerStyle>
                        <Style
                            TargetType="GridViewItem">
                            <Setter
                                Property="Margin"
                                Value="4" />
                            <Setter
                                Property="Padding"
                                Value="0" />
                            <Setter
                                Property="HorizontalContentAlignment"
                                Value="Stretch" />
                            <Setter
                                Property="VerticalContentAlignment"
                                Value="Stretch" />
                        </Style>
                    </GridView.ItemContainerStyle>

                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                CornerRadius="8"
                                BorderThickness="1"
                                BorderBrush="{ThemeResource CardBorderBrush}"
                                Background="{ThemeResource CardBackground}"
                                Margin="4"
                                Width="240">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition
                                            Height="Auto" />
                                        <RowDefinition
                                            Height="*" />
                                    </Grid.RowDefinitions>

                                    <!-- Ảnh sản phẩm -->
                                    <Grid
                                        Grid.Row="0"
                                        Background="{ThemeResource SubtleFillColorBrush}">
                                        <Image
                                            Source="{Binding ImageUrl}"
                                            Height="180"
                                            Stretch="UniformToFill" />

                                        <!-- Badge trạng thái -->
                                        <Border
                                            CornerRadius="4"
                                            Padding="6,2"
                                            HorizontalAlignment="Right"
                                            Background="{Binding StockBadgeColor}"
                                            VerticalAlignment="Top"
                                            Margin="0,8,8,0">
                                            <TextBlock
                                                Text="{Binding StockStatus}"
                                                Foreground="White"
                                                FontSize="12"
                                                FontWeight="SemiBold" />
                                        </Border>
                                    </Grid>

                                    <!-- Thông tin sản phẩm -->
                                    <StackPanel
                                        Grid.Row="1"
                                        Padding="12"
                                        Spacing="6">
                                        <TextBlock
                                            Text="{Binding Name}"
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap"
                                            MaxLines="2" />

                                        <StackPanel
                                            Orientation="Horizontal"
                                            Margin="0,4">
                                            <TextBlock
                                                Text="{Binding SalePrice, Converter={StaticResource CurrencyConverter}}"
                                                Foreground="{ThemeResource SystemAccentColor}"
                                                FontWeight="Bold"
                                                FontSize="16" />
                                        </StackPanel>

                                        <!-- Đánh giá và số lượng -->
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition
                                                    Width="*" />
                                                <ColumnDefinition
                                                    Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel
                                                Grid.Column="0"
                                                Orientation="Horizontal">
                                                <FontIcon
                                                    Glyph="&#xE735;"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource SystemAccentColorLight1}" />
                                                <TextBlock
                                                    Text="{Binding CareLevel}"
                                                    FontSize="12"
                                                    Margin="4,0,0,0" />
                                            </StackPanel>

                                            <TextBlock
                                                Grid.Column="1"
                                                Text="{Binding Stock}"
                                                FontSize="12"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </ScrollViewer>
        </Grid>

        <!-- Dialog thêm sản phẩm -->
        <ContentDialog
            x:Name="AddProductDialog"
            Title="Thêm sản phẩm mới"
            PrimaryButtonText="Thêm"
            SecondaryButtonText="Hủy"
            PrimaryButtonClick="AddProductDialog_PrimaryButtonClick"
            CloseButtonClick="AddProductDialog_CloseButtonClick">
            <StackPanel
                Spacing="16"
                Width="400">
                <TextBox
                    x:Name="ProductNameBox"
                    Header="Tên sản phẩm"
                    PlaceholderText="Nhập tên sản phẩm" />

                <Grid
                    ColumnDefinitions="*,*"
                    ColumnSpacing="12">
                    <NumberBox
                        x:Name="ProductPriceBox"
                        Grid.Column="0"
                        Header="Giá sản phẩm"
                        PlaceholderText="VND"
                        SpinButtonPlacementMode="Compact" />
                    <NumberBox
                        x:Name="ProductStockBox"
                        Grid.Column="1"
                        Header="Số lượng"
                        PlaceholderText="Số lượng"
                        SpinButtonPlacementMode="Compact"
                        Minimum="0"
                        SmallChange="1" />
                </Grid>

                <ComboBox
                    Header="Danh mục"
                    PlaceholderText="Chọn danh mục"
                    HorizontalAlignment="Stretch">
                    <ComboBoxItem
                        Content="Điện thoại" />
                    <ComboBoxItem
                        Content="Laptop" />
                    <ComboBoxItem
                        Content="Phụ kiện" />
                </ComboBox>

                <TextBox
                    x:Name="ProductImageBox"
                    Header="Link ảnh sản phẩm"
                    PlaceholderText="https://example.com/image.jpg" />

                <TextBox
                    Header="Mô tả sản phẩm"
                    PlaceholderText="Nhập mô tả chi tiết sản phẩm"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    Height="100" />
            </StackPanel>
        </ContentDialog>
    </Grid>
</Page>
