<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="csc13001_plant_pos.View.StatisticPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:csc13001_plant_pos.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:csc13001_plant_pos.View.UI"
    xmlns:model="using:csc13001_plant_pos.Model"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <conv:DateToStringConverter
            x:Key="DateToStringConverter" />
            <conv:PercentageToForegroundConverter
            x:Key="PercentageToForegroundConverter" />
            <conv:CurrencyConverter
x:Key="CurrencyConverter" />
        </ResourceDictionary>
    </Page.Resources>
    <Grid
        Padding="24"
        RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:PageTitle
            Title="Thống kê"
            Grid.Column="0" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <!-- Fixed width for Type ComboBox -->
                <ColumnDefinition Width="400" />
                <!-- Flexible width for Start Date Picker -->
                <ColumnDefinition Width="400" />
                <!-- Flexible width for End Date Picker -->
                <ColumnDefinition Width="Auto" />
                <!-- Auto width for Export Button -->
            </Grid.ColumnDefinitions>

            <!-- Type ComboBox -->
            <ComboBox Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="0,0,10,0" SelectedValue="{x:Bind ViewModel.TimeType, Mode=TwoWay}" SelectedValuePath="Tag">
                <ComboBoxItem Content="Theo ngày" Tag="DAILY" />
                <ComboBoxItem Content="Theo tháng" Tag="MONTHLY" />
                <ComboBoxItem Content="Theo năm" Tag="YEARLY" />
            </ComboBox>

            <!-- Start Date Picker -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="0,0,10,0" Padding="8,5" BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock VerticalAlignment="Center" Text="From Date:" Margin="0,0,5,0"/>
                    <DatePicker SelectedDate="{x:Bind ViewModel.StartDate, Mode=TwoWay}" VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>

            <!-- End Date Picker -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="8,5"  Margin="0,0,10,0" BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock VerticalAlignment="Center" Text="To Date:" Margin="0,0,5,0"/>
                    <DatePicker SelectedDate="{x:Bind ViewModel.EndDate, Mode=TwoWay}" VerticalAlignment="Center" IsEnabled="False" />
                </StackPanel>
            </StackPanel>

            <!-- Export Button -->
            <Button Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="8,5" BorderBrush="#E0E0E0" BorderThickness="1" Content="Export" Click="ExportButton_Click">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8DE;" />
                            <TextBlock VerticalAlignment="Center" Text="Xuất báo cáo" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </Grid>


        <!--  Statistics tiles  -->
        <Grid
            Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Revenue Tile  -->
            <Grid
                Grid.Column="0"
                Margin="0,0,10,0"
                Padding="20,15"
                Background="White"
                CornerRadius="14">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="Lợi nhuận" />
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="12"
                        DataContext="{x:Bind ViewModel, Mode=OneWay}">
                                            <TextBlock.Foreground>
                                                <Binding Path="StatisticDto.RevenueGrowthRate"
                                     Converter="{StaticResource PercentageToForegroundConverter}" />
                                            </TextBlock.Foreground>
    
                        <Run
                            Text="{x:Bind ViewModel.StatisticDto.RevenueGrowthRate, Mode=OneWay}" />
                        <Run
                            Text="%" />
                    </TextBlock>



                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    Orientation="Horizontal">
                    <Border
                        Width="32"
                        Height="32"
                        Margin="0,0,10,0"
                        Background="#FFE8D7"
                        CornerRadius="16">
                        <FontIcon
                            FontSize="14"
                            Foreground="#FF9C44"
                            Glyph="&#xE8CB;" />
                    </Border>
                    <TextBlock
    VerticalAlignment="Center"
    FontSize="20"
    FontWeight="Bold"
    DataContext="{x:Bind ViewModel, Mode=OneWay}">
                        <TextBlock.Text>
                            <Binding Path="StatisticDto.Revenue"
                 Converter="{StaticResource CurrencyConverter}" />
                        </TextBlock.Text>
                    </TextBlock>

                </StackPanel>
            </Grid>

            <!--  Orders Tile  -->
            <Grid
                Grid.Column="1"
                Margin="5,0,5,0"
                Padding="20,15"
                Background="White"
                CornerRadius="14">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="Số đơn hàng" />
                    <TextBlock
    Margin="10,0,0,0"
    FontSize="12"
    DataContext="{x:Bind ViewModel, Mode=OneWay}">
                        <TextBlock.Foreground>
                            <Binding Path="StatisticDto.OrderCountGrowthRate"
                 Converter="{StaticResource PercentageToForegroundConverter}" />
                        </TextBlock.Foreground>
    
    <Run
        Text="{x:Bind ViewModel.StatisticDto.OrderCountGrowthRate, Mode=OneWay}" />
    <Run Text="%" />
                    </TextBlock>


                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    Orientation="Horizontal">
                    <Border
                        Width="32"
                        Height="32"
                        Margin="0,0,10,0"
                        Background="#E8F5E9"
                        CornerRadius="16">
                        <FontIcon
                            FontSize="14"
                            Foreground="#4CAF50"
                            Glyph="&#xE8F3;" />
                    </Border>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="{x:Bind ViewModel.StatisticDto.OrderCount, Mode=OneWay}" />
                </StackPanel>
            </Grid>

            <!--  Average Tile  -->
            <Grid
                Grid.Column="2"
                Margin="10,0,0,0"
                Padding="20,15"
                Background="White"
                CornerRadius="14">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="Doang thu" />
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="12"
                        DataContext="{x:Bind ViewModel, Mode=OneWay}">
                        <TextBlock.Foreground>
                            <Binding Path="StatisticDto.ProfitGrowthRate"
                 Converter="{StaticResource PercentageToForegroundConverter}" />
                        </TextBlock.Foreground>

                        <Run Text="{x:Bind ViewModel.StatisticDto.ProfitGrowthRate, Mode=OneWay}" />
                        <Run Text="%" />
                    </TextBlock>



                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    Orientation="Horizontal">
                    <Border
                        Width="32"
                        Height="32"
                        Margin="0,0,10,0"
                        Background="#FFF8E1"
                        CornerRadius="16">
                        <FontIcon
                            FontSize="14"
                            Foreground="#FFC107"
                            Glyph="&#xE8D4;" />
                    </Border>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        DataContext="{x:Bind ViewModel, Mode=OneWay}">
                        <TextBlock.Text>
                            <Binding Path="StatisticDto.Profit"
             Converter="{StaticResource CurrencyConverter}" />
                        </TextBlock.Text>
                    </TextBlock>

                </StackPanel>
            </Grid>
        </Grid>

        <!--  Chart Section  -->
        <Grid
            Grid.Row="3"
            Padding="20"
            Background="White"
            CornerRadius="14">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,15"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Biểu đồ doanh thu" />

            <Grid
                Grid.Row="1">
                <lvc:CartesianChart
                    Series="{x:Bind ViewModel.MySeries, Mode=OneWay}"
                    XAxes="{x:Bind ViewModel.XAxes, Mode=OneWay}"
                    YAxes="{x:Bind ViewModel.YAxes, Mode=OneWay}"
                    LegendPosition="Right"
                    TooltipPosition="Auto"
                    ZoomMode="X"
                    ZoomingSpeed="0"
                />



                <!--  Tooltip Overlay (positioned by code-behind)  -->
                <Border
                    x:Name="ChartTooltip"
                    Padding="8,4"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#333333"
                    CornerRadius="4"
                    Visibility="Collapsed">
                    <TextBlock
                        FontSize="12"
                        Foreground="Black"
                        Text="966" />
                </Border>
            </Grid>
        </Grid>

        <Grid
            Grid.Row="4"
            CornerRadius="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="20" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Sản phẩm bán chạy  -->
            <Border
                Grid.Column="0"
                Padding="10"
                Background="White"
                BorderThickness="2"
                CornerRadius="14">
                <StackPanel>
                    <Grid>
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="Sản phẩm bán chạy" />
                        <Button
                            HorizontalAlignment="Right"
                            Content="Xem thêm"
                            Click="ClickNavigate" />

                    </Grid>

                    <ItemsControl
                        ItemsSource="{x:Bind ViewModel.StatisticReview.TopSellingProducts, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate
                                x:DataType="model:Product">
                                <Grid
                                    Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition
                                            Width="0.3*" />
                                        <ColumnDefinition
                                            Width="0.4*" />
                                        <ColumnDefinition
                                            Width="0.3*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        FontWeight="Bold"
                                        Text="{x:Bind ProductId}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Text="{x:Bind Name}" />
                                    <TextBlock
                                        Grid.Column="2"
                                        Text="{x:Bind Stock}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!--  Sản phẩm sắp hết hàng  -->
            <Border
                Grid.Column="2"
                Padding="10"
                Background="White"
                BorderThickness="2"
                CornerRadius="14">
                <StackPanel>
                    <Grid>
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="Sản phẩm sắp hết hàng" />
                        <Button
                            HorizontalAlignment="Right"
                            Content="Xem thêm"
                            Click="ClickNavigate" />

                    </Grid>

                    <ItemsControl
                        ItemsSource="{x:Bind ViewModel.StatisticReview.LowStockProducts, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate
                                x:DataType="model:Product">
                                <Grid
                                    Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition
                                            Width="0.3*" />
                                        <ColumnDefinition
                                            Width="0.4*" />
                                        <ColumnDefinition
                                            Width="0.3*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        FontWeight="Bold"
                                        Text="{x:Bind ProductId}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Text="{x:Bind Name}" />
                                    <TextBlock
                                        Grid.Column="2"
                                        Text="{x:Bind Stock}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>


    </Grid>
</Page>
