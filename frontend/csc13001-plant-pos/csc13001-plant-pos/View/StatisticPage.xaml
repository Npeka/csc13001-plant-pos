<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="csc13001_plant_pos.View.StatisticPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:csc13001_plant_pos.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:csc13001_plant_pos.View.UI"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <conv:PercentageToForegroundConverter
            x:Key="PercentageToForegroundConverter" />
    </Page.Resources>
    <Grid
        Padding="24"
        RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <ui:PageTitle
            Title="Thống kê"
            Grid.Column="0" />

        <!--  Header with date range and export button  -->
        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Padding="8,5"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
                <StackPanel
                    Orientation="Horizontal"
                    Spacing="8">
                    <FontIcon
                        FontSize="12"
                        Glyph="&#xE787;" />
                    <TextBlock
                        VerticalAlignment="Center"
                        Text="{Binding SelectedDateRange, Mode=TwoWay}" />
                </StackPanel>

                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem
                            Click="OnDateRangeSelected"
                            Text="Last 7 days" />
                        <MenuFlyoutItem
                            Click="OnDateRangeSelected"
                            Text="Last month" />
                        <MenuFlyoutItem
                            Click="OnCustomDatePicked"
                            Text="Pick a date..." />
                    </MenuFlyout>
                </Button.Flyout>
            </Button>




            <Button
                Grid.Column="1"
                Padding="8,5"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Content="Export">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="8">
                            <FontIcon
                                FontSize="12"
                                Glyph="&#xE8DE;" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Text="Export" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </Grid>

        <!--  Statistics tiles  -->
        <Grid
            Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Revenue Tile  -->
            <Grid
                Grid.Column="0"
                Margin="0,0,10,0"
                Padding="20,15"
                Background="White"
                CornerRadius="14">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="Revenue" />
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="12"
                        Foreground="{x:Bind conv:PercentageToForegroundConverter.Convert(DashboardVM.Tiles[0].Percentage)}">
                        <Run
                            Text="{x:Bind DashboardVM.Tiles[0].Percentage}" />
                        <Run
                            Text="%" />
                    </TextBlock>


                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    Orientation="Horizontal">
                    <Border
                        Width="32"
                        Height="32"
                        Margin="0,0,10,0"
                        Background="#FFE8D7"
                        CornerRadius="16">
                        <FontIcon
                            FontSize="14"
                            Foreground="#FF9C44"
                            Glyph="&#xE8CB;" />
                    </Border>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="$14,329" />
                </StackPanel>
            </Grid>

            <!--  Orders Tile  -->
            <Grid
                Grid.Column="1"
                Margin="5,0,5,0"
                Padding="20,15"
                Background="White"
                CornerRadius="14">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="Orders" />
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="12"
                        Foreground="{x:Bind conv:PercentageToForegroundConverter.Convert(DashboardVM.Tiles[1].Percentage)}">
                        <Run
                            Text="{x:Bind DashboardVM.Tiles[1].Percentage}" />
                        <Run
                            Text="%" />
                    </TextBlock>

                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    Orientation="Horizontal">
                    <Border
                        Width="32"
                        Height="32"
                        Margin="0,0,10,0"
                        Background="#E8F5E9"
                        CornerRadius="16">
                        <FontIcon
                            FontSize="14"
                            Foreground="#4CAF50"
                            Glyph="&#xE8F3;" />
                    </Border>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="2,506" />
                </StackPanel>
            </Grid>

            <!--  Average Tile  -->
            <Grid
                Grid.Column="2"
                Margin="10,0,0,0"
                Padding="20,15"
                Background="White"
                CornerRadius="14">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="Average" />
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="12"
                        Foreground="{x:Bind conv:PercentageToForegroundConverter.Convert(DashboardVM.Tiles[2].Percentage)}">
                        <Run
                            Text="{x:Bind DashboardVM.Tiles[0].Percentage}" />
                        <Run
                            Text="%" />
                    </TextBlock>

                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    Orientation="Horizontal">
                    <Border
                        Width="32"
                        Height="32"
                        Margin="0,0,10,0"
                        Background="#FFF8E1"
                        CornerRadius="16">
                        <FontIcon
                            FontSize="14"
                            Foreground="#FFC107"
                            Glyph="&#xE8D4;" />
                    </Border>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="$2,047" />
                </StackPanel>
            </Grid>
        </Grid>

        <!--  Chart Section  -->
        <Grid
            Grid.Row="3"
            Padding="20"
            Background="White"
            CornerRadius="14">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,15"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Sales chart" />

            <Grid
                Grid.Row="1">
                <lvc:CartesianChart
                    Series="{Binding Series}"
                    TooltipPosition="Auto"
                    XAxes="{Binding XAxes}"
                    YAxes="{Binding YAxes}" />


                <!--  Tooltip Overlay (positioned by code-behind)  -->
                <Border
                    x:Name="ChartTooltip"
                    Padding="8,4"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#333333"
                    CornerRadius="4"
                    Visibility="Collapsed">
                    <TextBlock
                        FontSize="12"
                        Foreground="Black"
                        Text="966" />
                </Border>
            </Grid>
        </Grid>

        <Grid
            Grid.Row="4"
            CornerRadius="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="20" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Sản phẩm bán chạy  -->
            <Border
                Grid.Column="0"
                Padding="10"
                Background="White"
                BorderThickness="2"
                CornerRadius="14">
                <StackPanel>
                    <Grid>
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="Sản phẩm bán chạy" />
                        <Button
                            HorizontalAlignment="Right"
                            Content="Xem thêm" />
                    </Grid>

                    <ItemsControl
                        ItemsSource="{x:Bind BestSellingProducts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate
                                x:DataType="local:Product1">
                                <Grid
                                    Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition
                                            Width="0.3*" />
                                        <ColumnDefinition
                                            Width="0.4*" />
                                        <ColumnDefinition
                                            Width="0.3*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        FontWeight="Bold"
                                        Text="{x:Bind ProductID}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Text="{x:Bind Name}" />
                                    <TextBlock
                                        Grid.Column="2"
                                        Text="{x:Bind QuantitySold}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!--  Sản phẩm sắp hết hàng  -->
            <Border
                Grid.Column="2"
                Padding="10"
                Background="White"
                BorderThickness="2"
                CornerRadius="14">
                <StackPanel>
                    <Grid>
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="Sản phẩm sắp hết hàng" />
                        <Button
                            HorizontalAlignment="Right"
                            Content="Xem thêm" />
                    </Grid>

                    <ItemsControl
                        ItemsSource="{x:Bind LowStockProducts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate
                                x:DataType="local:Product1">
                                <Grid
                                    Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition
                                            Width="0.3*" />
                                        <ColumnDefinition
                                            Width="0.4*" />
                                        <ColumnDefinition
                                            Width="0.3*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        FontWeight="Bold"
                                        Text="{x:Bind ProductID}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Text="{x:Bind Name}" />
                                    <TextBlock
                                        Grid.Column="2"
                                        Text="{x:Bind RemainingStock}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>


    </Grid>
</Page>
