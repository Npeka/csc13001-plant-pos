<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="csc13001_plant_pos.View.StatisticPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:csc13001_plant_pos.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dto="using:csc13001_plant_pos.DTO.ProductDTO"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:csc13001_plant_pos.Model"
    xmlns:ui="using:csc13001_plant_pos.View.UI"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <conv:DateToStringConverter x:Key="DateToStringConverter" />
            <conv:PercentageToForegroundConverter x:Key="PercentageToForegroundConverter" />
            <conv:CurrencyConverter x:Key="CurrencyConverter" />
        </ResourceDictionary>
    </Page.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Padding="32" RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" MinHeight="300" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ui:PageTitle Title="Thống kê" Grid.Column="0" />

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <!--  Fixed width for Type ComboBox  -->
                    <ColumnDefinition Width="400" />
                    <!--  Flexible width for Start Date Picker  -->
                    <ColumnDefinition Width="400" />
                    <!--  Flexible width for End Date Picker  -->
                    <ColumnDefinition Width="Auto" />
                    <!--  Auto width for Export Button  -->
                </Grid.ColumnDefinitions>

                <!--  Type ComboBox  -->
                <ComboBox
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    SelectedValue="{x:Bind ViewModel.TimeType, Mode=TwoWay}"
                    SelectedValuePath="Tag">
                    <ComboBoxItem Content="Theo ngày" Tag="DAILY" />
                    <ComboBoxItem Content="Theo tháng" Tag="MONTHLY" />
                    <ComboBoxItem Content="Theo năm" Tag="YEARLY" />
                </ComboBox>

                <!--  Start Date Picker  -->
                <StackPanel
                    Grid.Column="1"
                    Margin="0,0,10,0"
                    Padding="8,5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="Từ ngày:" />
                        <DatePicker VerticalAlignment="Center" SelectedDate="{x:Bind ViewModel.StartDate, Mode=TwoWay}" />
                    </StackPanel>
                </StackPanel>

                <!--  End Date Picker  -->
                <StackPanel
                    Grid.Column="2"
                    Margin="0,0,10,0"
                    Padding="8,5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="Đến ngày:" />
                        <DatePicker
                            VerticalAlignment="Center"
                            IsEnabled="False"
                            SelectedDate="{x:Bind ViewModel.EndDate, Mode=TwoWay}" />
                    </StackPanel>
                </StackPanel>

                <!--  Export Button  -->
                <Button
                    Grid.Column="3"
                    Padding="8,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Click="ExportButton_Click"
                    Content="Export"
                    Style="{StaticResource AccentButtonStyle}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8DE;" />
                                <TextBlock VerticalAlignment="Center" Text="Xuất báo cáo" />
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>


            <!--  Statistics tiles  -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Revenue Tile  -->
                <Grid
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    Padding="20,15"
                    Background="White"
                    CornerRadius="14">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Margin="0,0,0,10"
                        Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Lợi nhuận" />
                        <TextBlock
                            Margin="10,0,0,0"
                            DataContext="{x:Bind ViewModel, Mode=OneWay}"
                            FontSize="12">
                            <TextBlock.Foreground>
                                <Binding Converter="{StaticResource PercentageToForegroundConverter}" Path="StatisticDto.RevenueGrowthRate" />
                            </TextBlock.Foreground>

                            <Run Text="{x:Bind ViewModel.StatisticDto.RevenueGrowthRate, Mode=OneWay}" />
                            <Run Text="%" />
                        </TextBlock>



                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Border
                            Width="32"
                            Height="32"
                            Margin="0,0,10,0"
                            Background="#FFE8D7"
                            CornerRadius="16">
                            <FontIcon
                                FontSize="14"
                                Foreground="#FF9C44"
                                Glyph="&#xE8CB;" />
                        </Border>
                        <TextBlock
                            VerticalAlignment="Center"
                            DataContext="{x:Bind ViewModel, Mode=OneWay}"
                            FontSize="20"
                            FontWeight="Bold">
                            <TextBlock.Text>
                                <Binding Converter="{StaticResource CurrencyConverter}" Path="StatisticDto.Revenue" />
                            </TextBlock.Text>
                        </TextBlock>

                    </StackPanel>
                </Grid>

                <!--  Orders Tile  -->
                <Grid
                    Grid.Column="1"
                    Margin="5,0,5,0"
                    Padding="20,15"
                    Background="White"
                    CornerRadius="14">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Margin="0,0,0,10"
                        Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Số đơn hàng" />
                        <TextBlock
                            Margin="10,0,0,0"
                            DataContext="{x:Bind ViewModel, Mode=OneWay}"
                            FontSize="12">
                            <TextBlock.Foreground>
                                <Binding Converter="{StaticResource PercentageToForegroundConverter}" Path="StatisticDto.OrderCountGrowthRate" />
                            </TextBlock.Foreground>

                            <Run Text="{x:Bind ViewModel.StatisticDto.OrderCountGrowthRate, Mode=OneWay}" />
                            <Run Text="%" />
                        </TextBlock>


                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Border
                            Width="32"
                            Height="32"
                            Margin="0,0,10,0"
                            Background="#E8F5E9"
                            CornerRadius="16">
                            <FontIcon
                                FontSize="14"
                                Foreground="#4CAF50"
                                Glyph="&#xE8F3;" />
                        </Border>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Text="{x:Bind ViewModel.StatisticDto.OrderCount, Mode=OneWay}" />
                    </StackPanel>
                </Grid>

                <!--  Average Tile  -->
                <Grid
                    Grid.Column="2"
                    Margin="10,0,0,0"
                    Padding="20,15"
                    Background="White"
                    CornerRadius="14">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Margin="0,0,0,10"
                        Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Doanh thu" />
                        <TextBlock
                            Margin="10,0,0,0"
                            DataContext="{x:Bind ViewModel, Mode=OneWay}"
                            FontSize="12">
                            <TextBlock.Foreground>
                                <Binding Converter="{StaticResource PercentageToForegroundConverter}" Path="StatisticDto.ProfitGrowthRate" />
                            </TextBlock.Foreground>

                            <Run Text="{x:Bind ViewModel.StatisticDto.ProfitGrowthRate, Mode=OneWay}" />
                            <Run Text="%" />
                        </TextBlock>



                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Border
                            Width="32"
                            Height="32"
                            Margin="0,0,10,0"
                            Background="#FFF8E1"
                            CornerRadius="16">
                            <FontIcon
                                FontSize="14"
                                Foreground="#FFC107"
                                Glyph="&#xE8D4;" />
                        </Border>
                        <TextBlock
                            VerticalAlignment="Center"
                            DataContext="{x:Bind ViewModel, Mode=OneWay}"
                            FontSize="20"
                            FontWeight="Bold">
                            <TextBlock.Text>
                                <Binding Converter="{StaticResource CurrencyConverter}" Path="StatisticDto.Profit" />
                            </TextBlock.Text>
                        </TextBlock>

                    </StackPanel>
                </Grid>
            </Grid>

            <!--  Chart Section  -->
            <Grid
                Grid.Row="3"
                Padding="20"
                Background="White"
                CornerRadius="14">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,0,15"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="Biểu đồ doanh thu" />

                <Grid Grid.Row="1">
                    <lvc:CartesianChart
                        LegendPosition="Right"
                        Series="{x:Bind ViewModel.MySeries, Mode=OneWay}"
                        TooltipPosition="Auto"
                        XAxes="{x:Bind ViewModel.XAxes, Mode=OneWay}"
                        YAxes="{x:Bind ViewModel.YAxes, Mode=OneWay}"
                        ZoomMode="X"
                        ZoomingSpeed="0" />



                    <!--  Tooltip Overlay (positioned by code-behind)  -->
                    <Border
                        x:Name="ChartTooltip"
                        Padding="8,4"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#333333"
                        CornerRadius="4"
                        Visibility="Collapsed">
                        <TextBlock
                            FontSize="12"
                            Foreground="Black"
                            Text="966" />
                    </Border>
                </Grid>
            </Grid>

            <Grid Grid.Row="4" CornerRadius="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Sản phẩm bán chạy (Trending Product)  -->
                <Border
                    Grid.Column="0"
                    Padding="16"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="14">
                    <StackPanel Spacing="12">
                        <!--  Header  -->
                        <Grid>
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Sản phẩm bán chạy" />
                            <Button
                                Padding="8,4"
                                HorizontalAlignment="Right"
                                BorderThickness="0"
                                Click="ClickNavigate"
                                Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="Xem thêm" />
                                    <FontIcon
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="12"
                                        Glyph="&#xE76C;" />
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!--  Danh sách sản phẩm  -->
                        <ItemsControl HorizontalAlignment="Center" ItemsSource="{x:Bind ViewModel.TopSellingProducts, Mode=OneWay}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid MaximumRowsOrColumns="3" Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="dto:ProductDto">
                                    <Grid Width="220" Margin="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Ảnh sản phẩm  -->
                                        <Ellipse
                                            Grid.Column="0"
                                            Width="40"
                                            Height="40"
                                            Margin="0,0,12,0">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{x:Bind Product.ImageUrl, Converter={StaticResource StringToUriConverter}}" />
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <!--  Thông tin sản phẩm  -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Text="{x:Bind Product.Name}" />
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="#666"
                                                    Text="Số lượng bán ra:" />
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="#666"
                                                    Text="{x:Bind SalesQuantity}" />
                                                <FontIcon
                                                    VerticalAlignment="Top"
                                                    FontFamily="Segoe MDL2 Assets"
                                                    FontSize="12"
                                                    Foreground="#666"
                                                    Glyph="&#xE8BE;" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!--  Sản phẩm sắp hết hàng (Out of Stock)  -->
                <Border
                    Grid.Column="2"
                    Padding="16"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="14">
                    <StackPanel Spacing="12">
                        <!--  Header  -->
                        <Grid>
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Sản phẩm sắp hết hàng" />
                            <Button
                                Padding="8,4"
                                HorizontalAlignment="Right"
                                BorderThickness="0"
                                Click="ClickNavigate"
                                Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="Xem thêm" />
                                    <FontIcon
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="12"
                                        Glyph="&#xE76C;" />
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!--  Danh sách sản phẩm  -->
                        <ItemsControl HorizontalAlignment="Center" ItemsSource="{x:Bind ViewModel.LowStockProducts, Mode=OneWay}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid MaximumRowsOrColumns="3" Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="model:Product">
                                    <Grid Width="220" Margin="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Ảnh sản phẩm  -->
                                        <Ellipse
                                            Grid.Column="0"
                                            Width="40"
                                            Height="40"
                                            Margin="0,0,12,0">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{x:Bind ImageUrl, Converter={StaticResource StringToUriConverter}}" />
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <!--  Thông tin sản phẩm  -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Text="{x:Bind Name}" />
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="#666"
                                                    Text="Số lượng còn lại:" />
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="#666"
                                                    Text="{x:Bind Stock}" />
                                                <FontIcon
                                                    VerticalAlignment="Top"
                                                    FontFamily="Segoe MDL2 Assets"
                                                    FontSize="12"
                                                    Foreground="#666"
                                                    Glyph="&#xF158;" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
