<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="csc13001_plant_pos.View.BillPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:csc13001_plant_pos.Model"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid MinWidth="550" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Rectangle
                    Width="550"
                    Height="68"
                    VerticalAlignment="Center"
                    Fill="#E6E6E6"
                    RadiusX="20"
                    RadiusY="20" />
                <Rectangle
                    Width="530"
                    Height="54"
                    VerticalAlignment="Center"
                    Fill="White"
                    RadiusX="20"
                    RadiusY="20" />
                <Rectangle
                    Width="510"
                    Height="40"
                    VerticalAlignment="Center"
                    Fill="#E6E6E6"
                    RadiusX="10"
                    RadiusY="10" />
                <Rectangle
                    Width="490"
                    Height="26"
                    VerticalAlignment="Center"
                    Fill="White"
                    RadiusX="20"
                    RadiusY="20" />
                <Rectangle
                    Width="470"
                    Height="12"
                    VerticalAlignment="Center"
                    Fill="Black"
                    RadiusX="5"
                    RadiusY="5" />
            </Grid>

            <!--  Nội dung  -->
            <Grid
                Grid.Row="1"
                Width="450"
                Margin="0,-34,0,20"
                Padding="20"
                Background="White"
                CornerRadius="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <!--  Tiêu đề  -->
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="175,20,0,20"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Text="Hoá đơn" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="{x:Bind ViewModel.OrderDate, Mode=OneWay, Converter={StaticResource DateToStringConverter}}" />

                <!--  Thông tin đơn hàng  -->
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0,10"
                    VerticalAlignment="Center"
                    Text="Mã hoá đơn:" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="0,10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="{x:Bind ViewModel.OrderId, Mode=OneWay}" />

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="0,10"
                    VerticalAlignment="Center"
                    Text="Nhân viên: " />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="0,10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="{x:Bind ViewModel.StaffName, Mode=OneWay}" />

                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="0,10"
                    VerticalAlignment="Center"
                    Text="Khách hàng:" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="0,10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="{x:Bind ViewModel.CustomerName, Mode=OneWay}" />

                <!--  Separator  -->
                <Rectangle
                    Grid.Row="5"
                    Grid.ColumnSpan="2"
                    Height="1"
                    Margin="0,10"
                    Fill="#EEEEEE" />

                <!--  Danh sách sản phẩm  -->
                <ItemsControl
                    Grid.Row="6"
                    Grid.ColumnSpan="2"
                    ItemsSource="{x:Bind ViewModel.OrderItems, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="model:OrderItem">
                            <Grid Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind Product.Name, Mode=OneWay}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="10,0"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind Quantity, Mode=OneWay}" />
                                <TextBlock
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind SalePrice, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--  Separator  -->
                <Rectangle
                    Grid.Row="7"
                    Grid.ColumnSpan="2"
                    Height="1"
                    Margin="0,10"
                    Fill="#EEEEEE" />

                <!--  Tổng tiền  -->

                <StackPanel
                    Grid.Row="8"
                    Grid.Column="0"
                    Margin="0,5"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock Text="Tổng sản phẩm (" />
                    <TextBlock Text="{x:Bind ViewModel.TotalItem, Mode=OneWay}" />
                    <TextBlock Text="):" />
                </StackPanel>
                <TextBlock
                    Grid.Row="8"
                    Grid.Column="1"
                    Margin="0,5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="{x:Bind ViewModel.TotalPrice, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />

                <StackPanel
                    Grid.Row="9"
                    Grid.Column="0"
                    Margin="0,5"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock Text="Giảm giá (" />
                    <TextBlock Text="{x:Bind ViewModel.DiscountRate, Mode=OneWay, Converter={StaticResource PercentageConverter}}" />
                    <TextBlock Text="):" />
                </StackPanel>
                <TextBlock
                    Grid.Row="9"
                    Grid.Column="1"
                    Margin="0,5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="{x:Bind ViewModel.DiscountAmount, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />

                <!--  Separator  -->
                <Rectangle
                    Grid.Row="10"
                    Grid.ColumnSpan="2"
                    Height="1"
                    Margin="0,10"
                    Fill="#EEEEEE" />

                <TextBlock
                    Grid.Row="11"
                    Grid.Column="0"
                    Margin="0,5"
                    VerticalAlignment="Center"
                    Text="Tổng tiền:" />
                <TextBlock
                    Grid.Row="11"
                    Grid.Column="1"
                    Margin="0,5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="{x:Bind ViewModel.FinalPrice, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />
            </Grid>

            <!--  Nút  -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="#D50914"
                    Click="ExportPDFButton_Click"
                    Content="Xuất hoá đơn (PDF)"
                    CornerRadius="4"
                    Foreground="White" />

                <Button
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="White"
                    BorderBrush="#DDDDDD"
                    Click="BackButton_Click"
                    Content="Trở lại"
                    CornerRadius="4"
                    Foreground="Black" />
            </Grid>
        </Grid>
    </Grid>
</Page>