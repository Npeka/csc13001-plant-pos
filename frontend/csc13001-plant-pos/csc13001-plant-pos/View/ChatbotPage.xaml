<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="csc13001_plant_pos.View.ChatbotPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:csc13001_plant_pos.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!--  Header  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Padding="16,12"
            Background="#F7F7F8"
            BorderBrush="#E5E5E5"
            BorderThickness="0,0,0,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="12">
                <FontIcon
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    FontSize="20"
                    Foreground="#202123"
                    Glyph="&#xE8EA;" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="#202123"
                    Text="Trợ lý PlantAI" />
            </StackPanel>

            <StackPanel
                Grid.Column="2"
                Orientation="Horizontal"
                Spacing="8">
                <!--  History Button  -->
                <Button
                    x:Name="HistoryButton"
                    Padding="8"
                    Background="Transparent"
                    BorderThickness="0"
                    CornerRadius="4"
                    Style="{StaticResource AccentButtonStyle}">
                    <FontIcon
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        FontSize="16"
                        Foreground="#202123"
                        Glyph="&#xE712;" />
                </Button>
                <!--  New Button  -->
                <Button
                    x:Name="NewChatButton"
                    Padding="8"
                    Background="Transparent"
                    BorderThickness="0"
                    CornerRadius="4"
                    Style="{StaticResource AccentButtonStyle}">
                    <FontIcon
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        FontSize="16"
                        Foreground="#202123"
                        Glyph="&#xE710;" />
                </Button>
            </StackPanel>
        </Grid>

        <!--  Chat History  -->
        <ScrollViewer
            Grid.Row="1"
            Grid.Column="0"
            Padding="0"
            Background="White"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Padding="0">
                <!--  User Message  -->
                <Grid Padding="16,24" Background="White">
                    <Grid MaxWidth="800" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <PersonPicture
                            Grid.Column="0"
                            Width="32"
                            Height="32"
                            Margin="0,0,16,0"
                            VerticalAlignment="Top"
                            ProfilePicture="/Assets/Icon/ManagerIcon.png" />

                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock
                                FontWeight="SemiBold"
                                Foreground="#202123"
                                Text="Bạn" />
                            <Border
                                Padding="12,8"
                                Background="#F7F7F8"
                                BorderBrush="#E5E5E5"
                                BorderThickness="1"
                                CornerRadius="8">
                                <TextBlock
                                    Foreground="#202123"
                                    LineHeight="24"
                                    Text="Tôi vừa mua cây trầu bà và không biết cách chăm sóc. Bạn có thể tư vấn giúp tôi không?"
                                    TextWrapping="Wrap" />
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!--  AI Response  -->
                <Grid Padding="16,24" Background="#F7F7F8">
                    <Grid MaxWidth="800" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <PersonPicture
                            Grid.Column="0"
                            Width="32"
                            Height="32"
                            Margin="0,0,16,0"
                            VerticalAlignment="Top"
                            ProfilePicture="/Assets/Icon/ShoppingIcon.png" />

                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock
                                FontWeight="SemiBold"
                                Foreground="#202123"
                                Text="AI Assistant" />
                            <Border
                                Padding="12,8"
                                Background="White"
                                BorderBrush="#E5E5E5"
                                BorderThickness="1"
                                CornerRadius="8">
                                <TextBlock
                                    Foreground="#202123"
                                    LineHeight="24"
                                    TextWrapping="Wrap">
                                    <Run Text="Rất vui khi bạn đã chọn cây trầu bà! Đây là một loại cây dễ chăm sóc và phổ biến. Dưới đây là một số hướng dẫn cơ bản:" />
                                    <LineBreak />
                                    <LineBreak />
                                    <Run Text="1. Ánh sáng: Trầu bà thích ánh sáng gián tiếp, tránh ánh nắng trực tiếp." />
                                    <LineBreak />
                                    <Run Text="2. Nước: Tưới khi lớp đất trên mặt khô, khoảng 1-2 lần/tuần tùy mùa." />
                                    <LineBreak />
                                    <Run Text="3. Độ ẩm: Thích môi trường ẩm, có thể phun sương lên lá." />
                                    <LineBreak />
                                    <LineBreak />
                                    <Run Text="Hãy đặt cây ở nơi có ánh sáng tốt nhưng không trực tiếp, và chú ý không để nước đọng trong chậu." />
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!--  User Message 2  -->
                <Grid Padding="16,24" Background="White">
                    <Grid MaxWidth="800" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <PersonPicture
                            Grid.Column="0"
                            Width="32"
                            Height="32"
                            Margin="0,0,16,0"
                            VerticalAlignment="Top"
                            ProfilePicture="/Assets/Icon/ManagerIcon.png" />

                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock
                                FontWeight="SemiBold"
                                Foreground="#202123"
                                Text="Bạn" />
                            <Border
                                Padding="12,8"
                                Background="#F7F7F8"
                                BorderBrush="#E5E5E5"
                                BorderThickness="1"
                                CornerRadius="8">
                                <TextBlock
                                    Foreground="#202123"
                                    LineHeight="24"
                                    Text="Cảm ơn bạn! Tôi thấy lá cây hơi vàng ở mép, đó có phải là dấu hiệu của vấn đề gì không?"
                                    TextWrapping="Wrap" />
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!--  AI Response 2  -->
                <Grid Padding="16,24" Background="#F7F7F8">
                    <Grid MaxWidth="800" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <PersonPicture
                            Grid.Column="0"
                            Width="32"
                            Height="32"
                            Margin="0,0,16,0"
                            VerticalAlignment="Top"
                            ProfilePicture="/Assets/Icon/ShoppingIcon.png" />

                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock
                                FontWeight="SemiBold"
                                Foreground="#202123"
                                Text="AI Assistant" />
                            <Border
                                Padding="12,8"
                                Background="White"
                                BorderBrush="#E5E5E5"
                                BorderThickness="1"
                                CornerRadius="8">
                                <TextBlock
                                    Foreground="#202123"
                                    LineHeight="24"
                                    TextWrapping="Wrap">
                                    <Run Text="Lá vàng ở mép có thể do một số nguyên nhân phổ biến sau:" />
                                    <LineBreak />
                                    <LineBreak />
                                    <Run Text="1. Tưới quá nhiều nước: Trầu bà không thích đất quá ẩm, có thể gây úng rễ." />
                                    <LineBreak />
                                    <Run Text="2. Thiếu độ ẩm: Không khí quá khô làm lá vàng ở mép." />
                                    <LineBreak />
                                    <Run Text="3. Ánh nắng trực tiếp: Có thể gây cháy lá." />
                                    <LineBreak />
                                    <Run Text="4. Thiếu dinh dưỡng: Đặc biệt là kali hoặc magiê." />
                                    <LineBreak />
                                    <Run Text="5. Nước nhiều clo: Nước máy có thể chứa nhiều clo gây vàng lá." />
                                    <LineBreak />
                                    <LineBreak />
                                    <Run Text="Tôi khuyên bạn nên kiểm tra độ ẩm của đất và điều chỉnh lịch tưới nước, đồng thời xem xét vị trí đặt cây có phù hợp không." />
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!--  Chat History Panel  -->
        <Grid
            x:Name="HistoryPanel"
            Grid.Row="1"
            Grid.Column="1"
            Width="200"
            Background="White"
            BorderBrush="#E5E5E5"
            BorderThickness="1,0,0,0"
            Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0"
                Padding="16,12"
                Background="#F7F7F8"
                BorderBrush="#E5E5E5"
                BorderThickness="0,0,0,1">
                <TextBlock
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="#202123"
                    Text="Lịch sử trò chuyện" />
            </Grid>

            <ListView
                Grid.Row="1"
                Padding="8"
                IsItemClickEnabled="True"
                SelectionMode="Single">
                <ListViewItem Padding="12,8">
                    <TextBlock Foreground="#202123" Text="07/04/2025" />
                </ListViewItem>
                <ListViewItem Padding="12,8">
                    <TextBlock Foreground="#202123" Text="06/04/2025" />
                </ListViewItem>
                <ListViewItem Padding="12,8">
                    <TextBlock Foreground="#202123" Text="05/04/2025" />
                </ListViewItem>
                <ListViewItem Padding="12,8">
                    <TextBlock Foreground="#202123" Text="04/04/2025" />
                </ListViewItem>
                <ListViewItem Padding="12,8">
                    <TextBlock Foreground="#202123" Text="03/04/2025" />
                </ListViewItem>
                <ListViewItem Padding="12,8">
                    <TextBlock Foreground="#202123" Text="02/04/2025" />
                </ListViewItem>
                <ListViewItem Padding="12,8">
                    <TextBlock Foreground="#202123" Text="01/04/2025" />
                </ListViewItem>
                <ListViewItem Padding="12,8">
                    <TextBlock Foreground="#202123" Text="31/03/2025" />
                </ListViewItem>
                <ListViewItem Padding="12,8">
                    <TextBlock Foreground="#202123" Text="30/03/2025" />
                </ListViewItem>
            </ListView>
        </Grid>

        <!--  Input Area  -->
        <Grid
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Padding="16,12"
            Background="#F7F7F8"
            BorderBrush="#E5E5E5"
            BorderThickness="0,1,0,0">
            <Grid MaxWidth="800" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Text Input Area  -->
                <Grid
                    Grid.Row="0"
                    Padding="12"
                    Background="White"
                    BorderBrush="#E5E5E5"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        Grid.Column="0"
                        Width="700"
                        MinHeight="24"
                        MaxHeight="120"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#202123"
                        PlaceholderText="Nhập tin nhắn..."
                        TextWrapping="Wrap" />

                    <StackPanel
                        Grid.Column="1"
                        Margin="8,0,0,0"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            Padding="8"
                            Background="#FF81C784"
                            BorderThickness="0"
                            CornerRadius="4"
                            Style="{StaticResource AccentButtonStyle}">
                            <FontIcon
                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                FontSize="16"
                                Foreground="White"
                                Glyph="&#xE725;" />
                        </Button>
                    </StackPanel>
                </Grid>

                <!--  Footer Text  -->
                <TextBlock
                    Grid.Row="1"
                    Margin="0,8,0,0"
                    HorizontalAlignment="Center"
                    FontSize="12"
                    Foreground="#8E8EA0"
                    Text="AI Assistant có thể đưa ra thông tin không chính xác. Xem lại và kiểm tra thông tin quan trọng." />
            </Grid>
        </Grid>
    </Grid>
</Page>
