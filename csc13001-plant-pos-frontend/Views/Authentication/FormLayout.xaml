<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="csc13001_plant_pos_frontend.Views.Authentication.FormLayout"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:csc13001_plant_pos_frontend.Views.Authentication"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <AcrylicBrush x:Key="AcrylicBackgroundBrush"
                      TintColor="White"
                      TintOpacity="0"
                      FallbackColor="Black"
                      TintLuminosityOpacity="0" />
    </UserControl.Resources>

    <Border HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="400"
            Padding="30"
            CornerRadius="15"
            BorderThickness="1"
            BorderBrush="{StaticResource AccentAAFillColorDisabled}"
            Background="{StaticResource AcrylicBackgroundBrush}">
        <ContentPresenter Content="{Binding Child, ElementName=Root}" />
    </Border>
</UserControl>
