<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="csc13001_plant_pos_frontend.Views.Authentication.FormResetPassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:csc13001_plant_pos_frontend.Views.Authentication"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <StackPanel Spacing="15">
        <local:FormTitle Title="Reset Your Password" />

        <TextBlock Text="Enter a new password for your account."
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   FontSize="14"
                   Opacity="0.8"
                   Margin="0,0,0,10" />

        <!-- New Password Field -->
        <PasswordBox x:Name="NewPassword"
                     Password="{Binding NewPassword, Mode=TwoWay}"
                     PlaceholderText="Enter new password"
                     Height="40"
                     Padding="10"
                     BorderBrush="Gray"
                     CornerRadius="5" />

        <!-- Confirm Password Field -->
        <PasswordBox x:Name="ConfirmPassword"
                     Password="{Binding ConfirmPassword, Mode=TwoWay}"
                     PlaceholderText="Confirm new password"
                     Height="40"
                     Padding="10"
                     BorderBrush="Gray"
                     CornerRadius="5" />

        <!-- Error Message -->
        <TextBlock Text="{Binding Error, TargetNullValue=''}"
                   Foreground="{Binding ErrorColor}"
                   FontSize="14"
                   TextWrapping="Wrap"
                   Margin="0,0,0,16"
                   Visibility="{Binding Error, Converter={StaticResource StringToVisibilityConverter}}" />

        <!-- Submit Button -->
        <Button x:Name="ResetPasswordButton"
                HorizontalAlignment="Stretch"
                Height="40"
                Click="ResetPasswordButton_Click"
                Style="{StaticResource AccentButtonStyle}">
            <Button.Content>
                <TextBlock Text="Reset Password" />
            </Button.Content>
        </Button>
    </StackPanel>
</UserControl>
