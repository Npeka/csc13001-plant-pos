<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="csc13001_plant_pos_frontend.Views.ListUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:csc13001_plant_pos_frontend.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20"
          Width="800"
          Height="500">

        <StackPanel>

            <!-- Thanh tìm kiếm -->
            <TextBox x:Name="SearchBox"
                     PlaceholderText="Tìm kiếm khách hàng..."
                     Margin="0,0,0,10"
                     TextChanged="SearchBox_TextChanged" />

            <!-- Bộ lọc -->
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Bộ lọc ngày -->
                <CalendarDatePicker x:Name="DateFilter"
                                    PlaceholderText="Ngày đăng ký"
                                    DateChanged="DateFilter_DateChanged"
                                    Width="200"
                                    VerticalAlignment="Center"
                                    Grid.Column="0" />

                <!-- Bộ lọc hạng -->
                <ComboBox x:Name="RankFilter"
                          Width="150"
                          PlaceholderText="Chọn hạng"
                          SelectionChanged="RankFilter_SelectionChanged"
                          VerticalAlignment="Center"
                          Grid.Column="1"
                          Margin="10,0,0,0">
                    <ComboBoxItem Content="Tất cả" />
                    <ComboBoxItem Content="Đồng" />
                    <ComboBoxItem Content="Bạc" />
                    <ComboBoxItem Content="Vàng" />
                    <ComboBoxItem Content="Bạch Kim" />
                    <ComboBoxItem Content="Kim Cương" />
                </ComboBox>

                <!-- Nút Reset -->
                <Button Content="Đặt lại"
                        Click="ResetFilter_Click"
                        Width="100"
                        Background="Red"
                        Foreground="White"
                        VerticalAlignment="Center"
                        Grid.Column="2"
                        Margin="10,0,0,0" />
            </Grid>

            <!-- Bọc ListView trong ScrollViewer để kích hoạt cuộn -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Height="350">
                <ListView ItemsSource="{x:Bind FilteredUsers, Mode=OneWay}"
                          SelectionMode="Single">

                    <!-- Tiêu đề cột -->
                    <ListView.Header>
                        <StackPanel Orientation="Horizontal"
                                    Padding="10"
                                    Background="#DDDDDD">
                            <TextBlock Text="ID"
                                       Width="100"
                                       FontWeight="Bold" />
                            <TextBlock Text="Họ Tên"
                                       Width="200"
                                       FontWeight="Bold" />
                            <TextBlock Text="Điểm số"
                                       Width="100"
                                       FontWeight="Bold" />
                            <TextBlock Text="Hạng bậc thẻ"
                                       Width="150"
                                       FontWeight="Bold" />
                            <TextBlock Text="Ngày tạo"
                                       Width="150"
                                       FontWeight="Bold" />
                        </StackPanel>
                    </ListView.Header>

                    <!-- Hiển thị từng dòng dữ liệu -->
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:Customer">
                            <StackPanel Orientation="Horizontal"
                                        Padding="10">
                                <TextBlock Text="{x:Bind ID}"
                                           Width="100" />
                                <TextBlock Text="{x:Bind Name}"
                                           Width="200" />
                                <TextBlock Text="{x:Bind Points}"
                                           Width="100" />
                                <Border Background="{x:Bind RankColor}"
                                        Padding="5"
                                        CornerRadius="5">
                                    <TextBlock Text="{x:Bind Rank}"
                                               Foreground="White" />
                                </Border>
                                <TextBlock Text="{x:Bind CreatedAt}"
                                           Width="150" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </ScrollViewer>

        </StackPanel>
    </Grid>
</Page>
