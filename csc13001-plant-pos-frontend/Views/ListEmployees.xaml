<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="csc13001_plant_pos_frontend.Views.ListEmployees"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:csc13001_plant_pos_frontend.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20"
          Width="900"
          Height="500">

        <StackPanel>

            <!-- Thanh tìm kiếm -->
            <TextBox x:Name="SearchBox"
                     PlaceholderText="Tìm kiếm theo tên hoặc ID nhân viên..."
                     Margin="0,0,0,10"
                     TextChanged="SearchBox_TextChanged" />

            <!-- Bộ lọc -->
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Bộ lọc ngày -->
                <CalendarDatePicker x:Name="DateFilter"
                                    PlaceholderText="Ngày bắt đầu làm việc"
                                    DateChanged="DateFilter_DateChanged"
                                    Width="200"
                                    VerticalAlignment="Center"
                                    Grid.Column="0" />

                <!-- Bộ lọc vị trí -->
                <ComboBox x:Name="PositionFilter"
                          Width="200"
                          PlaceholderText="Chọn vị trí"
                          SelectionChanged="PositionFilter_SelectionChanged"
                          VerticalAlignment="Center"
                          Grid.Column="1"
                          Margin="10,0,0,0">
                    <ComboBoxItem Content="Tất cả" />
                    <ComboBoxItem Content="Quản lý" />
                    <ComboBoxItem Content="Nhân viên bán hàng" />
                    <ComboBoxItem Content="Nhân viên kho" />
                    <ComboBoxItem Content="Kế toán" />
                </ComboBox>

                <!-- Nút Reset -->
                <Button Content="Đặt lại"
                        Click="ResetFilter_Click"
                        Width="100"
                        Background="Red"
                        Foreground="White"
                        VerticalAlignment="Center"
                        Grid.Column="2"
                        Margin="10,0,0,0" />
            </Grid>

            <!-- Bọc ListView trong ScrollViewer để kích hoạt cuộn -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Height="350">
                <ListView ItemsSource="{x:Bind FilteredEmployees, Mode=OneWay}"
                          SelectionMode="Single">

                    <!-- Tiêu đề cột -->
                    <ListView.Header>
                        <StackPanel Orientation="Horizontal"
                                    Padding="10"
                                    Background="#DDDDDD">
                            <TextBlock Text="ID Nhân viên"
                                       Width="100"
                                       FontWeight="Bold" />
                            <TextBlock Text="Họ Tên"
                                       Width="200"
                                       FontWeight="Bold" />
                            <TextBlock Text="Số điện thoại"
                                       Width="150"
                                       FontWeight="Bold" />
                            <TextBlock Text="Ngày bắt đầu"
                                       Width="200"
                                       FontWeight="Bold" />
                            <TextBlock Text="Vị trí"
                                       Width="200"
                                       FontWeight="Bold" />
                        </StackPanel>
                    </ListView.Header>

                    <!-- Hiển thị từng dòng dữ liệu -->
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:Employee">
                            <StackPanel Orientation="Horizontal"
                                        Padding="10">
                                <TextBlock Text="{x:Bind ID}"
                                           Width="100" />
                                <TextBlock Text="{x:Bind Name}"
                                           Width="200" />
                                <TextBlock Text="{x:Bind PhoneNumber}"
                                           Width="150" />
                                <TextBlock Text="{x:Bind StartDate}"
                                           Width="200" />
                                <TextBlock Text="{x:Bind Position}"
                                           Width="200" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </ScrollViewer>

        </StackPanel>
    </Grid>
</Page>
