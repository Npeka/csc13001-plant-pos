<Page x:Class="csc13001_plant_pos_frontend.Views.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="using:csc13001_plant_pos_frontend.Core.DTOs.Orders"
      xmlns:controls="using:Microsoft.UI.Xaml.Controls"
      mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <!--
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Margin="0,0,0,12">
                <TextBlock Text="Search Orders"
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           Margin="0,0,0,8" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <ComboBox x:Name="SearchTypeComboBox"
                              Grid.Column="0"
                              Width="200"
                              Margin="0,0,8,0"
                              HorizontalAlignment="Left">
                        <ComboBoxItem Content="Order ID" />
                        <ComboBoxItem Content="Customer Name" />
                        <ComboBoxItem Content="Staff Name" />
                    </ComboBox>

                    <AutoSuggestBox Grid.Column="0"
                                    Margin="208,0,0,0"
                                    PlaceholderText="Search..."
                                    QueryIcon="Find" />
                </Grid>
            </StackPanel>

            <controls:DataGrid Grid.Row="1"
                               AutoGenerateColumns="False"
                               GridLinesVisibility="Horizontal"
                               IsReadOnly="True"
                               ItemsSource="{x:Bind ViewModel.Source, Mode=OneWay}">
                <controls:DataGrid.Resources>
                    <SolidColorBrush x:Key="DataGridColumnHeaderBackgroundColor"
                                     Color="Transparent" />
                </controls:DataGrid.Resources>
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn Binding="{Binding OrderId}"
                                                 Header="Order ID" />
                    <controls:DataGridTextColumn Binding="{Binding CustomerName}"
                                                 Header="Customer Name" />
                    <controls:DataGridTextColumn Binding="{Binding StaffName}"
                                                 Header="Staff Name" />
                    <controls:DataGridTextColumn Binding="{Binding OrderDate}"
                                                 Header="Order Date" />
                    <controls:DataGridTextColumn Binding="{Binding TotalPrice}"
                                                 Header="Total Price" />

                    <controls:DataGridTemplateColumn Header="Status">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Status}"
                                        CornerRadius="4"
                                        Padding="6,2">
                                    <TextBlock Text="{Binding Status}"
                                               HorizontalAlignment="Center" />
                                </Border>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>

                    <controls:DataGridTemplateColumn Header="Actions">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal"
                                            Spacing="4">
                                    <Button Content="Details"
                                            Click="ViewDetails_Click" />
                                    <Button Content="Delete"
                                            Style="{StaticResource AccentButtonStyle}"
                                            Click="DeleteOrder_Click" />
                                </StackPanel>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                </controls:DataGrid.Columns>
            </controls:DataGrid>

        </Grid>

        <Grid x:Name="OrderDetailsPanel"
              Grid.Column="1"
              Width="400"
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
              BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
              BorderThickness="1,0,0,0"
              Visibility="Collapsed">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Padding="16">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button x:Name="CloseDetailsButton"
                            Click="CloseDetails_Click"
                            Style="{StaticResource TextBlockButtonStyle}">
                        <FontIcon FontFamily="Segoe MDL2 Assets"
                                  Glyph="&#xE8BB;" />
                    </Button>
                </StackPanel>
                <TextBlock Text="Order Details"
                           Style="{StaticResource SubtitleTextBlockStyle}" />
                <TextBlock Text="{x:Bind ViewModel.OrderDetailItem.OrderId, Mode=OneWay}"
                           Style="{StaticResource BodyTextBlockStyle}"
                           Opacity="0.6" />
            </StackPanel>

            <ListView Grid.Row="1"
                      ItemsSource="{x:Bind ViewModel.OrderDetailItem.OrderDetailItemDtos, Mode=OneWay}"
                      Padding="16">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:OrderDetailItemDto">
                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="0"
                                       Grid.Row="0"
                                       Text="{x:Bind ProductName}"
                                       Style="{StaticResource BodyTextBlockStyle}" />
                            <TextBlock Grid.Column="0"
                                       Grid.Row="1"
                                       Text="{x:Bind Quantity}"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Opacity="0.6" />
                            <TextBlock Grid.Column="1"
                                       Grid.Row="0"
                                       Text="{x:Bind TotalPrice}"
                                       Style="{StaticResource BodyTextBlockStyle}" />
                            <TextBlock Grid.Column="1"
                                       Grid.Row="1"
                                       Text="{x:Bind UnitPrice}"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Opacity="0.6" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Grid.Row="2"
                        Padding="16"
                        Background="{ThemeResource SystemControlAcrylicElementBrush}">
                <Grid Margin="0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Total"
                               Style="{StaticResource SubtitleTextBlockStyle}" />
                    <TextBlock Grid.Column="1"
                               Text="{x:Bind ViewModel.OrderDetailItem.TotalPrice, Mode=OneWay}"
                               Style="{StaticResource SubtitleTextBlockStyle}" />
                </Grid>
                <TextBlock Text="{x:Bind ViewModel.OrderDetailItem.PaymentMethod, Mode=OneWay}"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Opacity="0.6" />
            </StackPanel>
        </Grid>
        -->
    </Grid>
</Page>
