<Page
    x:Class="csc13001_plant_pos_frontend.Views.EmployeeProfile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="Black" Padding="20">
            <Image Source="Assets/employee.png" Width="80" Height="80" HorizontalAlignment="Center" />
            <TextBlock x:Name="EmployeeNameText" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,10,0,2" TextAlignment="Center"/>
            <TextBlock x:Name="EmployeePositionText" FontSize="14" Foreground="Gray" TextAlignment="Center"/>
        </StackPanel>

        <!-- Main Content -->
        <StackPanel Grid.Column="1" Padding="20">
            <TextBlock Text="Thông tin nhân viên" FontSize="20" FontWeight="Bold"/>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="FirstNameTextBox" Header="Họ" Grid.Column="0" TextChanged="OnFieldChanged"/>
                <TextBox x:Name="LastNameTextBox" Header="Tên" Grid.Column="1" Margin="10,0,0,0" TextChanged="OnFieldChanged"/>
            </Grid>

            <Grid Margin="0,10,0,0">
                <TextBox x:Name="EmployeeIDTextBox" Header="ID Nhân viên" IsReadOnly="True"/>
            </Grid>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="PhoneNumberTextBox" Header="Số điện thoại" Grid.Column="0" TextChanged="OnFieldChanged"/>
                <TextBox x:Name="StartDateTextBox" Header="Ngày bắt đầu làm việc" Grid.Column="1" IsReadOnly="True"/>
            </Grid>

            <ComboBox x:Name="PositionComboBox" Header="Vị trí" Margin="0,10,0,0">
                <ComboBoxItem Content="Quản lý"/>
                <ComboBoxItem Content="Nhân viên bán hàng"/>
                <ComboBoxItem Content="Nhân viên kho"/>
                <ComboBoxItem Content="Kế toán"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="DiscardButton" Content="Hủy thay đổi" Click="DiscardChanges_Click" Background="Transparent" BorderBrush="Orange" Foreground="Orange" Visibility="Collapsed"/>
                <Button Content="Lưu thay đổi" Click="SaveChanges_Click" Background="Orange" Foreground="White" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
